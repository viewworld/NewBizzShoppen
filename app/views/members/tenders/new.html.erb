<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("member.tenders.new.view.title") %>
      <%= image_tag_for_locale %>
    <% end %>
  <% end %>

  <%= semantic_form_for [:member, @lead], :url => members_tenders_path,  :method => :post do |form| %>
    <%= frm(:title => t('member.tenders.new.view.form_title')) do %>
      <% section.block_content do %>
        <%= render :partial => '/shared/leads/form', :locals => {:form => form, :lead => @lead} %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("member.tenders.new.view.button_create"), :name => "commit_create" %>
        <% end %>
        <%= ibt(:class => "bt_grey fltri") do %>
          <%= button_to_function t("member.tenders.new.view.button_cancel"), "history.go(-1)" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
