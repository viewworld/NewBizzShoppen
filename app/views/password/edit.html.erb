<%= content_for :column_mc do -%>
  <header><%= t("password.edit.view.password_label") %></header>

  <%= semantic_form_for @user, :url => password_path, :method => :put do |form| %>
      <frm title="#{t('password.edit.view.form_title')}">
        <param:content>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol>
                <%= form.input :current_password, :as => :password %>
                <%= form.input :password %>
                <%= form.input :password_confirmation %>
              </ol>
            </fieldset>
          </div>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("password.edit.view.button_update_user") %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>
