<column-mc:>
  <header back="true"><%= t("newsletters.newsletter_campaigns.new.view.header") %></header>

  <%= semantic_form_for @newsletter_campaign, :remote => true, :url => newsletters_newsletter_campaigns_path do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("newsletters.newsletter_campaigns.new.view.button_create"), :onclick => "" %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("newsletters.newsletter_campaigns.new.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>