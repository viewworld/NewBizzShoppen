$("#new_newsletter_list li[id*='newsletter_list_']").removeClass("error");
$("#new_newsletter_list li[id*='newsletter_list_'] p[class='inline-errors']").remove();

<% if @newsletter_list.valid? %>
window.location.href = '/newsletters/newsletter_lists';
<% else %>
    <% @newsletter_list.errors.each_pair do  |field, msg| %>
        $("#new_newsletter_list li[id='newsletter_list_<%= field %>_input']").addClass("error");
        $("#new_newsletter_list li[id='newsletter_list_<%= field %>_input']").append("<p class='inline-errors'><%= msg %></p>");
    <% end %>
<% end %>