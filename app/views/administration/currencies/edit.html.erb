<%= content_for :column_mc do -%>
  <header back="true"><%= t("administration.currencies.edit.view.header", :name => @currency.name) %></header>

  <p><%= blurb("blurb_currencies") %></p>

  <%= semantic_form_for @currency, :url => administration_currency_path do |form| %>
      <frm title="#{@currency.name}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.currencies.edit.view.button_update_currency") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.currencies.edit.view.button_cancel"), href(administration_currencies_path) %>
          </ibt>          
        </param:actions>
      </frm>
  <% end %>
<% end %>