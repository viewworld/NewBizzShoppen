<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("administration.currencies.new.view.header") %>
    <% end %>
  <% end %>

  <p><%= blurb("blurb_currencies") %></p>

  <%= semantic_form_for @currency, :url => administration_currencies_path do |form| %>
      <%= frm(:title => "") do %>
        <% section.block_content do %>
          <%= render :partial => 'form', :locals => {:form => form} %>
        <% end %>
        <% section.block_actions do %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("administration.currencies.new.view.button_create_currency") %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("administration.currencies.new.view.button_cancel"), href(administration_currencies_path) %>
          <% end %>
        <% end %>
      <% end %>
  <% end %>
<% end %>
