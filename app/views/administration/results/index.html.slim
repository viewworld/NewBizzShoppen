= content_for :search_box do
  .search_box
    h2= t("common.search")
    .search_content
      = form_for @search, url: administration_results_path do |f|
        fieldset.inputs_vertical
          ol.no_pdd
            li.string
              = f.label :with_keyword, t("administration.results.index.view.search.keyword_label")
              = f.text_field :with_keyword, style: "width:140px"
            li.select
              = f.label t("administration.results.index.view.search.archived")
              = f.select :with_archived, [[t("common.yes_label"), 1], [t("common.no_label"), 0]]
            li.commit
              = ibt(class: "bt_green", icon: "magnify") do
                = submit_tag t("administration.results.index.view.search.search_button")
              p
                = bt_clear_filter

= content_for :column_mc do
  = header do |section|
    - section.block_header do
      = t("administration.results.index.view.header")

  - if @results.blank?
    = blank_state_message
  - else
    table.generic
      thead
        tr
          th.hl
          th= t("administration.results.index.view.name")
          th= t("administration.results.index.view.generic")
          th= t("administration.results.index.view.final")
          th.ta_r= t("administration.results.index.view.actions_column")
          th.hr
      tfoot
        tr
          td.fl
          td colspan="4"
          td.fr
      tbody
        - @results.each do |result|
          tr
            td.cl
            td= result.name
            td= translate_boolean(result.generic?)
            td= translate_boolean(result.final?)
            td.tda.ta_r
              = link_to t("administration.results.index.view.edit"), edit_administration_result_path(result), class: "default_action"
            td.cr

        - if will_paginate
          tr.pagination
            td.ta_c colspan="6"
              = will_paginate @results
