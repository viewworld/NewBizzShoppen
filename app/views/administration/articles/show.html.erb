<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t('administration.articles.show.view.header') %>
    <% end %>
  <% end %>

  <%= frm(:title => @article.title) do |section| %>
    <% section.block_header do %>
      <%= bt_link_to nil, t("common.edit_link"), edit_administration_article_path, :class => "fltr" %>
    <% end %>
    <% section.block_content do %>
      <div class="pdd_10">
        <%= raw @article.content %>
      </div>
    <% end %>
  <% end %>

<% end %>
