<column-mc:>
  <header><%= t('administration.articles.edit.view.header') %></header>
  
  <%= semantic_form_for @article, :as => :article, :url => administration_article_path(@article), :html => {:method => :put} do |form| %>
      <frm title="#{@article.title}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.articles.edit.view.button_save") %>
          </ibt>
          <% if @article.title.blank? %>
            <ibt c="fltri bt_grey">
              <%= button_to t("common.cancel_link"), administration_article_path, :method => :delete %>
            </ibt>
          <% end %>          
        </param:actions>
      </frm>
  <% end %>
</column-mc:>