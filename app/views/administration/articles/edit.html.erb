<%= content_for :column_mc do -%>
  <%= javascript_include_tag :ckeditor %>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t('administration.articles.edit.view.header', :name => @article.title) %><%= image_tag_for_locale %>
    <% end %>
  <% end %>

  <%= form_for @article, :as => :article, :url => administration_article_path(@article), :html => {:method => :delete, :id => "delete_article_form"} do |form| %>
  <% end %>

  <%= semantic_form_for @article, :as => :article, :url => administration_article_path(@article), :input_html => {:method => :put} do |form| %>
      <frm title="#{@article.title}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("administration.articles.edit.view.button_save") %>
          <% end %>
          <%= ibt(:class => "fltri bt_grey") do %>
            <% if @article.just_created %>
              <%= button_to_function t("common.cancel_link"), "$('#delete_article_form').submit();"  %>
            <% else %>
              <%= button_to_function t("common.cancel_link"), "history.go(-1)" %>
            <% end %>
            <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>
