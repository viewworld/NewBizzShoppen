<column-mc:>
<%= semantic_form_for [:administration, @lead], :method => :put do |form| %>
<header back="true"><%= t("administration.leads.edit.view.header", :lead_header => @lead.header) %></header>
      <frm title="Edit">
        <param:content>
          <%= render :partial => '/shared/leads/form', :locals => { :form => form }  %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.leads.edit.view.button_update") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.leads.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
<% end %>

<frm title="#{t('administration.leads.edit.view.rating_header')}" id="lead_rating">
<param:content>
  <div class="pdd_10">
    <ul>
    <% @lead.lead_purchases.each do |lead_purchase| %>
          <% unless lead_purchase.rating_level.nil? %>
          <li>
            <b><%= t("administration.leads.show.view.rating_level") %><%= lead_purchase.rating_level_as_text %></b><br />
            <%= t("administration.leads.show.view.rating_reason") %><%= lead_purchase.rating_reason %><br /><br />
          </li>
          <% end %>
    <% end %>
    </ul>
  </div>
</param:content>
</frm>
</column-mc:>