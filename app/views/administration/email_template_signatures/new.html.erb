<%= content_for :column_mc do -%>
  <%= javascript_include_tag :ckeditor %>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("administration.email_template_signatures.new.view.header") %>
    <% end %>
  <% end %>

  <%= semantic_form_for @email_template_signature, :url => administration_email_template_signatures_path do |form| %>
      <%= frm(:title => "") do %>
        <% section.block_content do %>
          <%= render :partial => 'form', :locals => {:form => form} %>
        <% end %>
        <% section.block_actions do %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("administration.email_template_signatures.new.view.button_create") %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("common.cancel_link"), "history.go(-1)" %>
          <% end %>
        <% end %>
      <% end %>
  <% end %>
<% end %>
