<column-mc:>
  <header back="true">New account</header>

  <%= semantic_form_for @user, :url => administration_users_path(:role => params[:role]) do |form| %>
      <frm title="#{User.role_as_text(params[:role])}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>

        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.users.edit.view.button_update_user") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>          
        </param:actions>
      </frm>
  <% end %>
</column-mc:>