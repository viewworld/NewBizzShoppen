<column-mc:>
  <header back="true"><%= t("administration.subscription_plans.edit.view.header", :name => @subscription_plan.name) %></header>

  <%= semantic_form_for @subscription_plan, :url => administration_subscription_plan_path(@subscription_plan) do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.subscription_plans.edit.view.button_update") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.subscription_plans.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>