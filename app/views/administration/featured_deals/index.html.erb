<column-mc:>
  <header><%= t("administration.featured_deals.view.index.header") %></header>

  <%= form_tag administration_featured_deals_path, :method => :post do %>
      <frm title="#{t('administration.featured_deals.view.index.title')}">
        <param:content>
          <div class="pdd_10 no_pdd_t">
            <div class="column_left">
              <fieldset class="inputs labels_170 labels_ta_r inputs_360">
                <ol class="align_inputs">
                  <% FeaturedDeal::POSITIONS.each do |position| %>
                      <li class="select">
                        <%= label_tag position == 0 ? t("administration.featured_deals.view.index.main_position") : t("administration.featured_deals.view.index.position", {:position => position }) %>
                        <%= select_tag "featured_deals[#{position}]", options_for_select(position == 0 ? @group_deals_for_select : @all_deals_for_select, FeaturedDeal.find_by_position(position).deal_id) %>
                      </li>
                  <% end %>
                </ol>
              </fieldset>
            </div>
          </div>
          <clb/><br/>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= submit_tag t("administration.featured_deals.view.index.set_featured_deals") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.featured_deals.view.index.cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>

</column-mc:>