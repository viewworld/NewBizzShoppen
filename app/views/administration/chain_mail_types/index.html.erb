<search-box:>
  <div class="search_box">
    <div class="search_left"></div>
    <div class="search_right"></div>
    <h2><%= t("common.search") %></h2>

    <div class="search_content">
      <%= form_for @search, :url => administration_chain_mail_types_path do |f| %>
          <fieldset class="inputs_vertical">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label :with_keyword, t("common.search_box.keyword_label") %>
                <%= f.text_field :with_keyword %>
              </li>
              <li class="boolean">
                <%= f.label :with_archived, t("common.search_box.archived_label") %>
                <%= f.check_box :with_archived %>
              </li>
              <li class="commit">
                <ibt c="bt_green" icon="magnify">
                  <%= submit_tag t("common.search_box.search_button") %>
                </ibt>
                <p>
                  <%= bt_clear_filter %>
                </p>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
</search-box:>

<column-mc:>

  <header>
    <param:content>
      <%= t("chain_mail_types.index.header") %>
    </param:content>

    <param:actions>
      <ul class="header_actions">
        <li class="last"><%= bt_link_to :plus, t("chain_mail_types.index.new"), new_administration_chain_mail_type_path %></li>
      </ul>
    </param:actions>
  </header>

  <% if @chain_mail_types.empty? %>
      <%= blank_state_message %>
  <% else %>
      <%= generic_table @chain_mail_types, :table_class => "chain_mail_types", :default_action => :edit, :cols => 3, :link_to_show => false, :link_to_delete => false do |blocks| %>

          <% blocks.headers do %>
            <th><%= t("chain_mail_types.table.name") %></th>
            <th><%= t("chain_mail_types.table.active") %></th>
            <th><%= t("chain_mail_types.table.archived") %></th>
          <% end %>
              
          <% blocks.cells do |chain_mail_type| %>
              <td><%= chain_mail_type.name %></td>
              <td><%= chain_mail_type.active? ? t("common.yes_label") : t("common.no_label") %></td>
              <td><%= chain_mail_type.archived? ? t("common.yes_label") : t("common.no_label") %></td>
          <% end %>

      <% end %>
  <% end %>

</column-mc:>
