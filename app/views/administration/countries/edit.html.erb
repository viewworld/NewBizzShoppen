<column-mc:>
  <%= javascript_include_tag :ckeditor %>
  <%= javascript_include_tag "popup_email_template_editor" %>
  <%= javascript_include_tag "email_template_signature" %>
  <header back="true"><%= t("administration.countries.edit.view.header", :name => @country.name) %></header>

  <%= semantic_form_for @country, :url => administration_country_path, :html => {:multipart => true} do |form| %>
      <frm title="#{@country.name}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.countries.edit.view.button_update_country") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.countries.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>