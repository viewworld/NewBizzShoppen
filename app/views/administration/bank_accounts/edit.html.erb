<%= content_for :column_mc do -%>
  <header><%= t('administration.bank_accounts.edit.view.header', :name => @bank_account.bank_name) %></header>

  <%= semantic_form_for @bank_account, :as => :bank_account, :url => administration_bank_account_path(@bank_account), :input_html => {:method => :put} do |form| %>
      <frm title="#{@bank_account.bank_name}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.bank_accounts.edit.view.button_save") %>
          </ibt>
            <ibt c="fltri bt_grey">
              <%= button_to_function t("common.cancel_link"), href(edit_administration_setting_path) %>
            </ibt>
        </param:actions>
      </frm>
  <% end %>
<% end %>