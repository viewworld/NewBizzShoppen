<%= content_for :column_mc do -%>
  <%= header do |section| %>
    <% section.block_header do %>
      <%= t('administration.bank_accounts.edit.view.header', :name => @bank_account.bank_name) %>
    <% end %>
  <% end %>

  <%= semantic_form_for @bank_account, :as => :bank_account, :url => administration_bank_account_path(@bank_account), :input_html => {:method => :put} do |form| %>
      <%= frm(:title => @bank_account.bank_name) do %>
        <% section.block_content do %>
          <%= render :partial => 'form', :locals => {:form => form} %>
        <% end %>
        <% section.block_actions do %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("administration.bank_accounts.edit.view.button_save") %>
          <% end %>
            <%= ibt(:class => "fltri bt_grey") do %>
              <%= button_to_function t("common.cancel_link"), href(edit_administration_setting_path) %>
            <% end %>
        <% end %>
      <% end %>
  <% end %>
<% end %>
