<%= content_for :column_mc do -%>
  <header><%= t('administration.bank_accounts.new.view.header') %></header>

  <%= semantic_form_for @bank_account, :as => :bank_account, :url => administration_bank_accounts_path, :input_html => {:method => :post} do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.bank_accounts.new.view.button_create") %>
          </ibt>
            <ibt c="fltri bt_grey">
              <%= button_to_function t("common.cancel_link"), href(edit_administration_setting_path) %>
            </ibt>
        </param:actions>
      </frm>
  <% end %>
<% end %>