<%= content_for :column_mc do -%>
  <header back="true"><%= t('administration.introduction_video.edit.view.header') %></header>

  <%= semantic_form_for @youtube_introduction, :as => :youtube_introduction, :url => administration_youtube_introduction_path(@youtube_introduction), :html => {:method => :put, :multipart => true} do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("administration.introduction_video.edit.view.button_save") %>
          <% end %>
          <%= ibt(:class => "fltri bt_grey") do %>
            <%= button_to_function t("common.cancel_link"), href(edit_administration_setting_path) %>
          <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>