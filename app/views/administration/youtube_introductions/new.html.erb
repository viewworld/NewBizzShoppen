<%= content_for :column_mc do -%>
  <header back="true"><%= t('administration.introduction_video.new.view.header') %></header>

  <%= semantic_form_for @youtube_introduction, :as => :youtube_introduction, :url => administration_youtube_introductions_path, :html => {:method => :post, :multipart => true} do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.introduction_video.new.view.button_create") %>
          </ibt>
          <ibt c="fltri bt_grey">
            <%= button_to_function t("common.cancel_link"), href(edit_administration_setting_path) %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
<% end %>