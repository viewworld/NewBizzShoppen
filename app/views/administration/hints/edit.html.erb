<%= content_for :column_mc do -%>
  <%= javascript_include_tag :ckeditor %>
  <header back="true">
    <%= t('administration.hints.edit.view.header', :name => @article.title) %>
    <%= image_tag("languages/flag_#{I18n.locale}.png") %>
  </header>

  <%= form_for @article, :as => :article, :url => administration_hint_path(@article), :html => {:method => :delete, :id => "delete_article_form"} do |form| %>
  <% end %>

  <%= semantic_form_for @article, :as => :article, :url => administration_hint_path(@article), :input_html => {:method => :put} do |form| %>
      <frm title="#{@article.title}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.hints.edit.view.button_save") %>
          </ibt>
          <ibt c="fltri bt_grey">
              <%= button_to_function t("common.cancel_link"), "history.go(-1)" %>
            </ibt>
        </param:actions>
      </frm>
  <% end %>
<% end %>
