<column-mc:>
  <header back="true"><%= t("administration.categories.edit.view.header", :category_name => @category.name) %></header>
  <%= semantic_form_for [:administration, @category], :method => :post, :html => {:multipart => true} do |form| %>
      <frm title="">
        <param:content>
          <%= image_tag(@category.image.url) unless @category.image.nil? %>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.categories.edit.view.button_update") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>          
        </param:actions>
      </frm>
  <% end %>


<%= link_to t("administration.categories.edit.view.new_template"), new_administration_lead_template_path(:category_id => @category.id) %>
<hl/>

<% unless @category.lead_templates.empty? %>
  <%= lead_templates_table @category.lead_templates, :show_checkboxes => false, :show_active_column => false, :paginate_table => false do |blocks| %>
      <% blocks.tools do |lead_template| %>
        <ul-actions>
            <%= link_to t("administration.categories.edit.view.edit_template"), edit_administration_lead_template_path(lead_template) %>
            <%= link_to t("administration.categories.edit.view.destroy_template"), administration_lead_template_path(lead_template), :method => :delete, :confirm => t("administration.categories.edit.view.destroy_template_confirmation_message") %>
        </ul-actions>
      <% end %>
  <% end %>
<% end %>
</column-mc:>