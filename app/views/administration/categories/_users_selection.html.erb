<li id="users_selection_<%= users_type %>_div" style="<%= 'display:none' unless @category.send("is_#{users_type.singularize}_unique".to_sym) %>" class="select unique">
  <label>&nbsp;</label>

  <div class="fltl grid_550" style="padding-bottom:10px;">
    <div>
      <%= text_field_tag "filter_#{users_type}", "", :id => "filer_#{users_type}" %>
      <%= bt_link_to nil, t("administration.categories.form.search"), "javascript:void(0)", :onclick => "filter_users('#{users_type}')", :class => "users_search" %>
    </div>
    <div class="grid_210 fltl">
      <%= select_tag "all_#{users_type}", options_for_select((users_type == "customers" ? (User.with_customers - @category.customers) : User.with_agents - @category.agents).map { |u| [u.email, u.id] }), {:multiple => true, :size => 10, :style => "height:200px; width:200px;"} %>
    </div>
    <div class="grid_70 fltl" style="margin-right: 10px;">
      <p class="ta_c pdd_5 no_pdd_lr"><%= bt_link_to nil, t("administration.categories.form.move_users_right"), "javascript:move_users_to_all('#{users_type}')", :id => "move_right" %></p>

      <p class="ta_c"><%= bt_link_to nil, t("administration.categories.form.move_users_left"), "javascript:move_users_to_selected('#{users_type}')", :id => "move_left" %></p>
    </div>
    <div class="grid_210 fltl">
      <ol class="no_pdd">
        <%= form.input users_type == "customers" ? :customer_ids : :agent_ids, :as => :select, :required => false, :label => false, :include_blank => false, :collection => (users_type == "customers" ? @category.customers : @category.agents).map { |u| [u.email, u.id] }, :input_html => {:id => "selected_#{users_type}", :multiple => true, :size => 10, :style => "height:200px; width:200px;"} %>
      </ol>
    </div>
    <clb/>
  </div>
</li>
