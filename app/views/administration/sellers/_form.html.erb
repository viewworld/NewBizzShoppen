<div class="pdd_10 no_pdd_t">
  <fieldset class="inputs labels_ta_r labels_240">
    <ol class="align_inputs">
      <%= form.input :company_name %>
      <%= form.input :first_name %>
      <%= form.input :last_name %>
      <%= form.fields_for :address do |address_form| %>
          <%= address_form.input :address_line_1 %>
          <%= address_form.input :address_line_2 %>
          <%= address_form.input :address_line_3 %>
          <%= address_form.input :zip_code %>
          <%= address_form.input :country_id, :collection => Country.all, :include_blank => false %>
      <% end %>
      <%= form.input :vat_no %>
      <%= form.input :default %>
      <%= label_tag :note, t("administration.sellers.form.note") %>
      <%= form.input :note,
                     :label => false,
                     :as => :ckeditor,
                     :input_html => {
                         :width => '1085px',
                         :height => '150px' } %>
    </ol>
  </fieldset>
</div>
