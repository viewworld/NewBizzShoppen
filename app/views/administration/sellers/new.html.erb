<%= content_for :column_mc do -%>
  <%= javascript_include_tag :ckeditor %>
  <%= header do |section| %>
    <% section.block_header do %>
      <%= t('administration.sellers.new.view.header') %>
    <% end %>
  <% end %>

  <%= semantic_form_for @seller, :as => :seller, :url => administration_sellers_path, :input_html => {:method => :post} do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("administration.sellers.new.view.button_create") %>
          <% end %>
          <%= ibt(:class => "fltri bt_grey") do %>
            <%= button_to_function t("common.cancel_link"), href(administration_sellers_path) %>
          <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>
