<%= content_for :column_mc do -%>
  <%= javascript_include_tag :ckeditor %>
  <header><%= t('administration.sellers.edit.view.header', :name => @seller.company_name) %></header>

  <%= semantic_form_for @seller, :as => :seller, :url => administration_seller_path(@seller), :input_html => {:method => :post} do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("administration.sellers.edit.view.button_update") %>
          <% end %>
          <%= ibt(:class => "fltri bt_grey") do %>
            <%= button_to_function t("common.cancel_link"), href(administration_sellers_path) %>
          <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>