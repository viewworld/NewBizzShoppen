<column-mc:>
  <header back="true"><%= t('administration.sellers.show.view.header') %></header>

  <frm title="#{@seller.name}">
    <param:header>
      <%= bt_link_to nil, t("common.edit_link"), edit_administration_seller_path(@seller), :class => "fltr" %>
    </param:header>
    <param:content>
      <div class="pdd_10">
        <p>
          <%= t("administration.sellers.show.view.name") %>: <%= @seller.name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.first_name") %>: <%= @seller.first_name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.last_name") %>: <%= @seller.last_name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.address_line_1") %>: <%= @seller.address.address_line_1 %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.address_line_2") %>: <%= @seller.address.address_line_2 %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.address_line_3") %>: <%= @seller.address.address_line_3 %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.zip_code") %>: <%= @seller.address.zip_code %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.country") %>: <%= @seller.address.country.name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.vat_no") %>: <%= @seller.vat_no %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.default") %>: <%= check_box_tag "default", 1, @seller.default?, :disabled => true %>
        </p>
      </div>
    </param:content>
  </frm>

</column-mc:>