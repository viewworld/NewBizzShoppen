<column-mc:>
  <header back="true"><%= t('administration.sellers.show.view.header') %></header>

  <frm title="#{@seller.name}">
    <param:header>
      <%= bt_link_to nil, t("common.edit_link"), edit_administration_seller_path(@seller), :class => "fltr" %>
    </param:header>
    <param:content>
      <div class="pdd_10">
        <p>
          <%= t("administration.sellers.show.view.name") %>: <%= @seller.name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.first_name") %>: <%= @seller.first_name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.last_name") %>: <%= @seller.last_name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.address") %>: <%= @seller.address %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.country") %>: <%= @seller.country.name %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.vat_no") %>: <%= @seller.vat_no %>
        </p><br/>
        <p>
          <%= t("administration.sellers.show.view.default") %>: <%= @seller.default %>
        </p>
      </div>
    </param:content>
  </frm>

</column-mc:>