<column-mc:>
  <header><%= t("administration.settings.edit.view.title") %></header>

  <%= form_tag administration_setting_path, :method => :put do %>
      <frm title="">
        <param:content>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol>
                <% @settings.each_with_index do |setting, i| %>
                    <li class="string">
                      <%= label_tag setting.var.humanize %>
                      <%= text_field "settings", setting.id, :value => setting.value, :id => "setting_#{i}" %>
                    </li>
                <% end %>
              </ol>
            </fieldset>
          </div>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= submit_tag t("administration.settings.edit.view.button_update_settings"), :onclick => "if(confirm('#{t("administration.settings.edit.view.confirmation_update_message")}')){ this.form.submit(); } else {return false;}" %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>

  <table class="generic" cellspacing="0" cellpadding="0" id="vat_rates">
    <thead>
        <tr>
          <th class="hl"></th>
          <th><%= t("administration.vat_rates.index.view.country") %></th>
          <th><%= t("administration.vat_rates.index.view.rate") %></th>
          <th><%= t("administration.vat_rates.index.view.actions") %></th>
          <th class="hr"></th>
        </tr>
    </thead>
    <tbody>
      <% @vat_rates.each do |vr| %>
        <tr>
          <td class="cl"></td>
          <td><%= vr.country.name %></td>
          <td><%= number_to_percentage(vr.rate, :precision => 2) %></td>
          <td class="tda ta_r">
            <ul-actions>
              <li><%= link_to t("administration.vat_rates.index.view.edit"), edit_administration_vat_rate_path(vr) %></li>
            </ul-actions>
          </td>
          <td class="cr"></td>
        </tr>
      <% end %>
      <tr class="main_actions">
        <td colspan="5">
          <%= bt_link_to nil, t("administration.vat_rates.index.view.add_vat_rate"), new_administration_vat_rate_path %>
        </td>
      </tr>
    </tbody>
    <tfoot>
    <tr>
      <td class="fl"></td>
      <td colspan="3"></td>
      <td class="fr"></td>
    </tr>
    </tfoot>
  </table>
</column-mc:>