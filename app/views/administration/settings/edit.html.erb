<column-mc:>

  <h1><%= t("administration.settings.edit.view.title") %></h1>

<%= form_tag administration_setting_path, :method => :put do %>
    <ul>
    <% @settings.each do |setting| %>
        <li><%= setting.var.humanize %> <%= text_field "settings", setting.id, :value => setting.value  %></li>
    <% end %>
    </ul>
    <%= submit_tag  t("administration.settings.edit.view.button_update_settings") %>
  <% end %>

</column-mc:>