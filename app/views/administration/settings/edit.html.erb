<column-mc:>
  <header><%= t("administration.settings.edit.view.title") %></header>

  <%= form_tag administration_setting_path, :method => :put do %>
      <frm title="">
        <param:content>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol>
                <% @settings.each_with_index do |setting, i| %>
                    <li class="string">
                      <%= label_tag setting.var.humanize %>
                      <%= text_field "settings", setting.id, :value => setting.value, :id => "setting_#{i}" %>
                    </li>
                <% end %>
              </ol>
            </fieldset>
          </div>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= submit_tag t("administration.settings.edit.view.button_update_settings"), :onclick => "if(confirm('#{t("administration.settings.edit.view.confirmation_update_message")}')){ this.form.submit(); } else {return false;}" %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>

  <table class="generic" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
          <th class="hl"></th>
          <th><%= t("administration.bank_accounts.index.view.country") %></th>
          <th><%= t("administration.bank_accounts.index.view.bank_name") %></th>
          <th><%= t("administration.bank_accounts.index.view.bank_address") %></th>
          <th><%= t("administration.bank_accounts.index.view.iban_no") %></th>
          <th><%= t("administration.bank_accounts.index.view.local_bank_number") %></th>
          <th><%= t("administration.bank_accounts.index.view.swift") %></th>
          <th><%= t("administration.bank_accounts.index.view.default_bank") %></th>
          <th><%= t("administration.bank_accounts.index.view.actions") %></th>
          <th class="hr"></th>
        </tr>
    </thead>
    <tbody>
      <% @bank_accounts.each do |ba| %>
        <tr>
          <td class="cl"></td>
          <td><%= ba.country.name %></td>
          <td><%= ba.bank_name %></td>
          <td><%= ba.bank_address %></td>
          <td><%= ba.iban_no %></td>
          <td><%= ba.local_bank_number %></td>
          <td><%= ba.swift %></td>
          <td><%= check_box_tag ba.id, 1, ba.default_bank?, :disabled => true %></td>
          <td>
            <ul-actions>
              <li><%= link_to t("administration.bank_accounts.index.view.show"), administration_bank_account_path(ba) %></li>
              <li><%= link_to t("administration.bank_accounts.index.view.edit"), edit_administration_bank_account_path(ba) %></li>
            </ul-actions>
          </td>
          <td class="cr"></td>
        </tr>
      <% end %>
      <tr class="main_actions">
        <td colspan="10">
          <%= bt_link_to nil, t("administration.bank_accounts.index.view.add_bank"), new_administration_bank_account_path %>
        </td>
      </tr>
    </tbody>
    <tfoot>
    <tr>
      <td class="fl"></td>
      <td colspan="8"></td>
      <td class="fr"></td>
    </tr>
    </tfoot>
  </table>
</column-mc:>