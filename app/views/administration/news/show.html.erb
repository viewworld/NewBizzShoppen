<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t('administration.news.show.view.header') %>
    <% end %>
  <% end %>

  <%= frm(:title => "#{@news.title}") do |section| %>
    <% section.block_header do %>
      <%= bt_link_to nil, t("common.edit_link"), edit_administration_news_path, :class => "fltr" %>
    <% end %>
    <% section.block_content do %>
      <div class="pdd_10">
        <%= raw @news.content %>
      </div>
    <% end %>
  <% end %>
<% end %>
