<column-mc:>

  <header>
    <%= t('administration.news.edit.view.header') %>
  </header>

  <%#= link_to t("common.back_link"), administration_news_index_path %>

  <%= semantic_form_for @news, :as => :news, :url => administration_news_path(@news), :html => {:method => :put} do |form| %>
      <frm title="#{@news.title}" c="todo_delete">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.news.edit.view.button_save") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <% if @news.title.blank? %>
                <%= button_to t("common.cancel_link"), administration_news_path(@news), :method => :delete %>
            <% end %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>