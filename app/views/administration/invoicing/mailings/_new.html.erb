<%= form_for @email_template_preview, :as => :email_template_preview, :url => administration_invoicing_invoice_mailings_path(@invoice) do |f| %>
    <p>
      <%= f.label :recipeints, t("administration.invoices.mailing.new.view.recipeints") %> <%= f.text_field :recipients,
                     :value => @invoice.user.email
                   %>
    </p>
    <p>
      <%= f.label :subject, t("administration.invoices.mailing.new.view.subject") %> <%= f.text_field :subject %>
    </p>
    <p>
      <%= f.label :body, t("administration.invoices.mailing.new.view.body") %> <%= f.text_area :body %>
    </p>
    <p><%= t("administration.invoices.mailing.new.view.attachment") %></p>
    <p><%= link_to @email_template_preview.invoice_filename, invoice_preview_path(@email_template_preview.invoice_filename) %></p>
    <%= f.hidden_field :invoice_filename, :value => @email_template_preview.invoice_filename.basename %>
    <p><%= f.submit t("administration.invoices.mailing.new.view.send") %></p>
<% end %>
