<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("administration.payment_transactions.new.view.header") %>
    <% end %>
  <% end %>

  <%= semantic_form_for @payment_transaction, :url => administration_invoicing_payment_transactions_path do |form| %>
    <frm>
      <param:content>
        <%= render :partial => 'form', :locals => {:form => form} %>
      </param:content>
      <param:actions>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("administration.payment_transactions.new.view.button_create") %>
        <% end %>
        <%= ibt(:class => "bt_grey fltri") do %>
          <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
        <% end %>
      </param:actions>
    </frm>
  <% end %>
<% end %>
