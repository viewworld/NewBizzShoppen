<column-mc:>
  <header back="true"><%= t("administration.payment_transactions.edit.view.header", :number => @payment_transaction.invoice.id, :name => @payment_transaction.invoice.customer_name) %></header>

  <% semantic_form_for @payment_transaction, :url => administration_invoicing_payment_transaction_path(@payment_transaction), :as => :payment_transaction do |form| %>
      <frm title="Edit">
        <param:content>
          <%= render :partial => 'form', :locals => { :form => form } %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("administration.payment_transactions.edit.view.button_update") %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>

   <script>
    $(function() {
        $(".datepicker").datepicker({ dateFormat: 'yy-mm-dd' });
    });
  </script>
</column-mc:>