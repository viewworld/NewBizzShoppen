<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("administration.payment_transactions.edit.view.header", :number => @payment_transaction.invoice.id, :name => @payment_transaction.invoice.customer_name) %>
    <% end %>
  <% end %>

  <%= semantic_form_for @payment_transaction, :url => administration_invoicing_payment_transaction_path(@payment_transaction), :as => :payment_transaction do |form| %>
    <%= frm(:title => t('administration.payment_transactions.edit.view.edit')) do %>
      <% section.block_content do %>
        <%= render :partial => 'form', :locals => { :form => form } %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("administration.payment_transactions.edit.view.button_update") %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
