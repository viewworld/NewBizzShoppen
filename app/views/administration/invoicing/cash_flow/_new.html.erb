<%= semantic_form_for [:administration, :invoicing, @invoice] do |form| %>
    <% form.inputs do %>
        <%= form.input :cash_flow, :label => "Amount paid",
                       :input_html => { :value => @invoice.cash_flow.zero? ? number_to_currency(@invoice.revenue_frozen,
                                                                                                :unit => "",
                                                                                                :delimiter => "") :
                                                                             number_to_currency(@invoice.cash_flow,
                                                                                                :unit => "",
                                                                                                :delimiter => "")} %>
        <%= form.input :paid_at,
                       :as => :string,
                       :required => false,
                       :input_html => { :class => "date_field",
                                        :value => @invoice.paid_at.nil? ? Date.today : @invoice.paid_at}%>
    <% end %>
    <% form.buttons do %>
        <%= form.commit_button t("administration.invoices.cash_flow.view.save_button") %>
    <% end %>
<% end %>


