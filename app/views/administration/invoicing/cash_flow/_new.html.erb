<%= semantic_form_for [:administration, :invoicing, @invoice] do |form| %>
    <% form.inputs do %>
        <%= form.input :cash_flow,
                       :input_html => { :value => @invoice.cash_flow.zero? ? as_currency(@invoice.revenue_frozen, @invoice.currency) : as_currency(@invoice.cash_flow, @invoice.currency) } %>
        <%= form.input :paid_at,
                       :as => :string,
                       :required => false,
                       :input_html => { :class => "date_field",
                                        :value => @invoice.paid_at.nil? ? Date.today : @invoice.paid_at}%>
    <% end %>
    <% form.buttons do %>
        <%= form.commit_button t("administration.invoices.cash_flow.view.save_button") %>
    <% end %>
<% end %>


