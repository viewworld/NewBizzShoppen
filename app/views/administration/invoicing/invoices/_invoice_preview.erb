<div class="invoice_show <%= version == :original ? "original" : "copy" %>">

  <div style="float: left;">
    <% if defined?(root_url) %>
        <%= image_tag 'invoices/logo.jpg', :alt => "logo", :width => 150 %>
    <% else %>
        <img src="../images/invoices/logo.jpg" alt="logo" width="150" />
    <% end %>
  </div>

  <div class="general_data">
    <table cellpadding="0" cellspacing="0" style="width: 100%">
      <tr>
        <td rowspan="3" style="width:55%;"></td>
        <td class="h"  style="width:23%; text-align: right"><%= t("administration.invoices.show.view.number") %>: </td>
        <td style="width:12%;"><%= invoice.number %>/<%=invoice.creation_date.year%></td>
      </tr>
      <tr>
        <td class="h" style="text-align: right"><%= t("administration.invoices.show.view.payment_deadline") %>: </td>
        <td><%= invoice.payment_deadline_date %></td>
      </tr>
      <tr>
        <td class="h" style="text-align: right"><%= t("administration.invoices.show.view.creation_date") %>: </td>
        <td><%= invoice.creation_date %></td>
      </tr>
    </table>
  </div>

  <div class="hInvoice"><%= t("administration.invoices.show.view.header") %></div>

  <div class="sides">
        <table cellpadding="0" cellspacing="0">
        <tr><td class="bigger"><%= t("administration.invoices.show.view.from") %></td><td class="bigger"><%= t("administration.invoices.show.view.to") %></td></tr>
        <tr><td class="h"><%= invoice.seller_name %></td><td class="h"><%= invoice.customer_name %></td></tr>
        <tr><td><%= invoice.seller_address %></td><td><%= invoice.customer_address %></td></tr>
        <tr>
          <td>
            <% if invoice.seller_vat_no.present? %>
                <%= t("administration.invoices.show.view.vat_no") %>: <%= invoice.seller_vat_no %>
            <% end %>
          </td>
          <td>
            <% if invoice.customer_vat_no.present? %>
                <%= t("administration.invoices.show.view.vat_no") %>: <%= invoice.customer_vat_no %>
            <% end %>
          </td>
        </tr>
        <% if invoice.ean_number.present? %>
          <tr><td></td><td><%= t("administration.invoices.show.view.ean_number") %>: <%= invoice.ean_number %></td></tr>
        <% end %>
        </table>
  </div>

  <div class="product_data">
    <table cellspacing="0" cellpadding="0">
      <thead>
      <tr>
        <td class="field_id">#</td>
        <td class="product_name"><%= t("administration.invoices.show.view.name") %></td>
        <td class="qty"><%= t("administration.invoices.show.view.quantity") %></td>
        <td class="netto_price"><%= t("administration.invoices.show.view.netto_price") %></td>
        <td class="vat"><%= t("administration.invoices.show.view.vat") %></td>
        <td class="vat_value"><%= t("administration.invoices.show.view.vat_value") %></td>
        <td class="brutto_value r"><%= t("administration.invoices.show.view.brutto_value") %></td>
      </tr>
      </thead>
      <tbody>

      <% invoice.invoice_lines.each_with_index do |invoice_line, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= invoice_line.name %></td>
            <td><%= invoice_line.quantity %></td>
            <td><%= number_to_currency(invoice_line.netto_price, :unit => invoice.currency.symbol) %></td>
            <td><%= invoice_line.vat_rate.zero? ? (t :na, :scope => "administration.invoices.common.view") : number_to_percentage(invoice_line.vat_rate, :precision => 0) %></td>
            <td><%= number_to_currency(invoice_line.vat_value, :unit => invoice.currency.symbol) %></td>
            <td class="r"><%= number_to_currency(invoice_line.brutto_value, :unit=>invoice.currency.symbol) %></td>
          </tr>
      <% end %>

      <tr class="space"><td colspan="7"></td></tr>

      <tr class="totals">
        <td class="empty" colspan="2"></td>
        <td class="totals_h h r"><%= t("administration.invoices.show.view.total") %></td>
        <td><%= number_to_currency(invoice.total_netto, :unit => invoice.currency.symbol) %></td>
        <td></td>
        <td><%= number_to_currency(invoice.total_vat, :unit => invoice.currency.symbol) %></td>
        <td class="h r" ><%= number_to_currency(invoice.total, :unit => invoice.currency.symbol) %></td>
      </tr>

      <tr class="space"><td colspan="7"></td></tr>

      <% unless invoice.vat_paid_in_customer_country? %>
          <% invoice.invoice_lines_grouped_by_vat_rate.each_with_index do |invoice_line, index| %>
              <tr class="totals">
                <td class="empty" colspan="2"></td>
                <% if index.zero? %>
                    <td class="totals_h h r"><%= t("administration.invoices.show.view.including") %></td>
                <% else %>
                    <td class="empty"></td>
                <% end %>
                <td><%= number_to_currency(invoice_line.netto_value_sum, :unit => invoice.currency.symbol) %></td>
                <td><%= invoice_line.vat_rate.zero? ? (t :na, :scope => "administration.invoices.common.view") : number_to_percentage(invoice_line.vat_rate, :precision => 0) %></td>
                <td><%= number_to_currency(invoice_line.vat_value_sum, :unit => invoice.currency.symbol) %></td>
                <td class="r"><%= number_to_currency(invoice_line.brutto_value_sum, :unit => invoice.currency.symbol) %></td>
              </tr>
          <% end %>
      <% end %>

      </tbody>
    </table>
  </div>

  <div class="additional_data">
    <ul>
      <p><span class="h"><%= t("administration.invoices.show.view.total_in_words") %>:</span> <%= invoice.total_in_words %></p>
      <% if invoice.english_version %>
          <p><span class="h"><%= t("administration.invoices.show.view.vat_paid") %>
            :</span> <%= invoice.vat_paid_in_customer_country == true ? t("administration.invoices.show.view.yes_label") : t("administration.invoices.show.view.no_label") %> <%= "- #{invoice.vat_text_in_customer_country}" if invoice.vat_text_in_customer_country.present? %></p>
      <% end %>
      <p><span class="h"><%= t("administration.invoices.show.view.payment_method") %>
        :</span> <%= invoice.payment_method == "cash" ? t("administration.invoices.common.view.cash") : t("administration.invoices.common.view.bank_transfer") %>
      </p>
      <% if not invoice.payment_method == "cash" %>
          <p><span class="h"><%= t("administration.invoices.show.view.payment_account") %>
            :</span>
            <% if invoice.bank_account %>
                <br/><%= t("administration.invoices.show.view.bank_name") %>: <%= invoice.bank_account.bank_name %>
                <br/><%= t("administration.invoices.show.view.bank_address") %>: <%= invoice.bank_account.bank_address %>
                <br/><%= t("administration.invoices.show.view.iban_number") %>: <%= invoice.bank_account.iban_no %>
                <br/><%= t("administration.invoices.show.view.local_bank_number") %>: <%= invoice.bank_account.local_bank_number %>
                <br/><%= t("administration.invoices.show.view.swift_code") %>: <%= invoice.bank_account.swift %>
                <% if invoice.bank_account.payment_conditions.present? %>
                  <br/><%= t("administration.invoices.show.view.payment_conditions") %>: <%= invoice.bank_account.payment_conditions %>
                <% end %>
            <% end %>
          </p>
      <% end %>
    </ul>
    <% if invoice.details.present? %>
        <br />
        <p><%= invoice.details %></p>
    <% end %>
  </div>

  <div class="status_data">
    <h2><%= t("administration.invoices.show.view.status") %></h2>
    <ul>
      <li><label class="h"><%= t("administration.invoices.show.view.creation_place") %></label><%= invoice.creation_place %></li>
      <li><label class="h"><%= t("administration.invoices.show.view.emailed_at") %></label><%= invoice.emailed_at or "-" %></li>
      <li><label class="h"><%= t("administration.invoices.show.view.paid_at") %></label><%= invoice.paid_at or "-" %></li>
      <li><label class="h"><%= t("administration.invoices.show.view.cashflow") %></label><%= number_to_currency(invoice.cash_flow, :unit => invoice.currency.symbol)%></li>
    </ul>
    <div class="clear"></div>
  </div>
</div>