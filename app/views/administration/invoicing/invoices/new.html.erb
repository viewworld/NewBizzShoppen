<%= content_for :column_mc do -%>
  <header back="true"><%= t("administration.invoices.new.view.header") %></header>

  <div class="clb"></div>

  <%= semantic_form_for [:administration, :invoicing, @invoice] do |form| %>
    <frm>
      <param:content>
        <div class="pdd_10 no_pdd_t">
          <fieldset class="inputs labels_ta_r labels_220">
            <ol class="align_inputs">
              <li class="header">
                <h3><%= t("administration.invoices.new.view.basic_information") %></h3>
              </li>
              <%= form.inputs do %>
                  <%= form.input :user_id, :collection => User.all, :include_blank => false %>
                  <%= form.input :seller_id, :collection => Seller.all, :include_blank => false %>
                  <%= form.input :currency_id, :as => :hidden%>
              <% end %>
            </ol>
          </fieldset>
        </div>
      </param:content>
      <param:actions>
        <ibt c="fltri" icon="save">
          <%= form.submit t("administration.invoices.new.view.button_create") %>
        </ibt>
        <ibt c="fltri bt_grey">
          <%= button_to_function t("common.cancel_link"), "window.location='#{administration_invoicing_upcoming_invoices_path}'" %>
        </ibt>
      </param:actions>
    </frm>
  <% end %>
<% end %>