<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("administration.softphone_servers.edit.view.header", :name => @softphone_server.name) %>
    <% end %>
  <% end %>

  <%= semantic_form_for @softphone_server, :url => administration_softphone_server_path do |form| %>
      <%= frm(:title => @softphone_server.name) do |section| %>
        <% section.block_content do %>
          <%= render :partial => 'form', :locals => {:form => form} %>
        <% end %>
        <% section.block_actions do %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("views.button_create") %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("administration.currencies.edit.view.button_cancel"), href(administration_softphone_servers_path) %>
          <% end %>
        <% end %>
      <% end %>
  <% end %>
<% end %>
