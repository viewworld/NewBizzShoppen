<%= content_for :column_mc do -%>
  <header back="true"><%= t("administration.softphone_servers.new.view.header") %></header>

  <%= semantic_form_for @softphone_server, :url => administration_softphone_servers_path do |form| %>
      <frm title="">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("views.button_create") %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("administration.currencies.new.view.button_cancel"), href(administration_currencies_path) %>
          <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>
