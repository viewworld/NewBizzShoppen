<%= content_for :column_mc do -%>
  <%= header do |section| %>
    <% section.block_header do %>
      <%= t("agent_home.show.view.header") %>
    <% end %>
    <% section.block_actions do %>
      <ul class="header_actions">
        <li class="last">
          <% if user_signed_in? %>
            <%= bt_link_to :key, t("supplier_home.show.view.sign_out"), '/logout' %>
          <% else %>
            <%= bt_link_to :user, t("agent_home.show.view.create_new_agent_account"), new_agent_account_path %>
          <% end %>
        </li>
      </ul>
    <% end %>
  <% end %>

  <div class="pdd_5 no_pdd_b">
    <% unless user_signed_in? %>
        <div class="grid_360 fltr">
          <%= frm(:title => t('agent_home.show.view.i_have_an_account'), :class => "no_marg") do %>
            <div class="pdd_10">
              <%= semantic_form_for(:user, :url => session_path(:user)) do |f| %>
                  <fieldset class="inputs labels_100 inputs_200 no_pdd">
                    <ol class="align_inputs no_pdd">
                      <%= render :partial => "shared/accounts/social_login_for_sign_in" %>
                      <%= f.input :email, :input_html => {:tabindex => 1} %>
                      <%= f.input :password, :label => raw(I18n.t("activerecord.attributes.user.password") + content_tag(:span, link_to(t("category_home.show.view.forgotten_password_link"), new_password_path(User)), :class => "label_link")), :input_html => {:tabindex => 2}, :wrapper_html => {:class => "rltv"} %>
                      <%= f.input :remember_me, :as => :boolean, :required => false, :input_html => {:tabindex => 3} %>
                      <li class="commit">
                        <%= ibt do %>
                          <%= f.submit t("category_home.show.view.sign_in"), :tabindex => 4 %>
                        <% end %>
                      </li>
                    </ol>
                  </fieldset>
              <% end %>
            </div>
          <% end %>
        </div>
    <% end %>

    <div class="<%= "grid_730 fltl" unless user_signed_in? %>">
      <p><%= blurb("blurb_agent_home#{'_logged_in' if user_signed_in?}") %></p>
    </div>

    <div class="clb"></div>

  </div>

  <div class="hl" style="padding: 15px 0"></div>

  <div id="leads_summary">
    <div class="column_1to3 fltl" id="news">
      <%= frm(:title => t('agent_home.show.view.header_news'), :class => "no_marg") do %>
        <% section.block_header do %>
          <%= bt_link_to nil, t("agent_home.show.view.complete_list_link"), news_index_path(:search => {:with_subclass => "Agent"}), :class => "fltr" %>
        <% end %>
        <% section.block_content do %>
          <ul class="solid_list">
            <% if @news.any? %>
                <%= render :partial => 'news', :collection => @news, :as => :news %>
            <% else %>
                <%= render :partial => 'shared/blank_data_li' %>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
    <div class="column_1to3 fltl" style="padding: 0 15px" id="best_sellers">
      <%= frm(:title => t('agent_home.show.view.header_best_sellers'), :class => "no_marg") do %>
        <% section.block_header do %>
          <%= bt_link_to nil, t("agent_home.show.view.complete_list_link"), leads_path(:search => {:bestsellers => true}), :class => "fltr" %>
        <% end %>
        <% section.block_content do %>
          <ul class="solid_list">
            <% if @best_sellers.any? %>
                <%= render :partial => 'lead', :collection => @best_sellers, :as => :lead %>
            <% else %>
                <%= render :partial => 'shared/blank_data_li' %>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
    <div class="column_1to3 fltl" id="latest_leads">
      <%= frm(:title => t('agent_home.show.view.header_latest_leads'), :class => "no_marg") do %>
        <% section.block_header do %>
          <%= bt_link_to nil, t("agent_home.show.view.complete_list_link"), leads_path(:search => {:latest => true}), :class => "fltr" %>
        <% end %>
        <% section.block_content do %>
          <ul class="solid_list">
            <% if @latest_leads.any? %>
                <%= render :partial => 'lead', :collection => @latest_leads, :as => :lead %>
            <% else %>
                <%= render :partial => 'shared/blank_data_li' %>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
    <div class="clb"></div>
  </div>

<% end %>

<%= content_for :js do -%>
  <script type="text/javascript">

      jQuery(document).ready(function() {
          jQuery(".solid_list li:not(.no_data)").bind("click", function() {
              window.location = $(this).find('a.read_more').attr("href");
          });
      });

  </script>
<% end %>
