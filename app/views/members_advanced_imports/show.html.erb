<%= content_for :column_mc do -%>
  <%= header do |section| %>
    <% section.block_header do %>
      <%= t("members_advanced_import.show.view.header") %>
    <% end %>
  <% end %>

  <%= form_tag choose_members_advanced_import_path, :method => :post, :multipart => true, :id => "advanced_import_form" do %>
    <%= frm(:title => "#{t('members_advanced_import.show.view.title')}") do |section| %>
      <% section.block_content do %>
        <div class="pdd_10 no_pdd_t">
          <fieldset class="inputs labels_ta_r labels_180">
            <ol class="align_inputs">
              <%= file_field_tag 'attachment', :accept => 'spreadsheet/ods,spreadsheet/doc,spreadsheet/xdoc', :class => "fltl" %>
            </ol>
          </fieldset>
        </div>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= submit_tag t("advanced_import.show.view.button"), :name => "commit_create" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
