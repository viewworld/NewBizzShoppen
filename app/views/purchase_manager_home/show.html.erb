<column-mc:>

  <header>
    <param:content>
      <%= "Welcome" %>
    </param:content>

    <param:actions>
      <ul class="header_actions">
        <li class="last">
          <% if user_signed_in? %>
              <%= bt_link_to :plus, t("buyer_home.show.view.sign_out"), '/logout' %>
          <% else %>
              <%= bt_link_to :plus, t("purchase_manager_home.show.view.create_new_purchase_manager_account"), new_purchase_manager_account_path %>
          <% end %>
        </li>
      </ul>
    </param:actions>
  </header>

  <div class="pdd_5 no_pdd_b">
    <h2><%= t("agent_home.show.view.header_welcome") %></h2>

    <p>- <%= link_to t("purchase_manager_home.show.view.agent_link"), agent_home_path %></p>

    <p>- <%= link_to t("purchase_manager_home.show.view.buyer_link"), buyer_home_path %></p>
    <br/>

    <p><%= blurb("blurb_purchase_manager_home") %></p>

  </div>

  <hl pdd="15"></hl>

  <% unless user_signed_in? %>
      <frm title="#{t('purchase_manager_home.show.view.i_have_an_account')}" c="no_marg">
        <div class="pdd_10">
          <%= semantic_form_for(:user, :url => session_path(:user)) do |f| %>
              <fieldset class="inputs labels_100 inputs_240 no_pdd">
                <ol class="align_inputs no_pdd">
                  <%= f.input :email, :label => I18n.t("activerecord.attributes.user.email"), :input_html => {:tabindex => 1} %>
                  <%= f.input :password, :label => raw(I18n.t("activerecord.attributes.user.password") + content_tag(:span, link_to(t("category_home.show.view.forgotten_password_link"), new_password_path(User)), :class => "label_link")), :input_html => {:tabindex => 2}, :wrapper_html => { :class => "rltv" } %>
                  <%= f.input :remember_me, :as => :boolean, :required => false, :label => I18n.t("category_home.show.view.remember_me"), :input_html => {:tabindex => 3} %>
                  <li class="commit">
                    <ibt>
                      <%= f.submit t("category_home.show.view.sign_in"), :tabindex => 4 %>
                    </ibt>
                  </li>
                </ol>
              </fieldset>
          <% end %>
        </div>
      </frm>
  <% end %>

  <hl pdd="15"></hl>

  <div id="leads_summary">
    <div class="column_1to3 fltl" id="news">
      <frm title="#{t('purchase_manager_home.show.view.header_news')}">
        <param:header>
          <%= bt_link_to nil, t("purchase_manager_home.show.view.complete_list_link"), news_index_path(:search => {:with_subclass => 'PurchaseManager'}), :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'news', :collection => @news, :as => :news %>
          </ul>
        </param:content>

      </frm>
    </div>
    <div class="column_1to3 fltl" style="padding: 0 15px" id="best_sellers">
      <frm title="#{t('purchase_manager_home.show.view.header_best_sellers')}">
        <param:header>
          <%= bt_link_to nil, t("purchase_manager_home.show.view.complete_list_link"), leads_path(:search => {:bestsellers => true}), :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'lead', :collection => @best_sellers, :as => :lead %>
          </ul>
        </param:content>
      </frm>
    </div>
    <div class="column_1to3 fltl" id="latest_leads">
      <frm title="#{t('purchase_manager_home.show.view.header_latest_leads')}">
        <param:header>
          <%= bt_link_to nil, t("purchase_manager_home.show.view.complete_list_link"), leads_path(:search => {:latest => true}), :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'lead', :collection => @latest_leads, :as => :lead %>
          </ul>
        </param:content>
      </frm>
    </div>
    <clb/>
  </div>

</column-mc:>

<js:>
  <script type="text/javascript">

      jQuery(document).ready(function() {
          jQuery(".solid_list li").bind("click", function() {
              window.location = $(this).find('a.read_more').attr("href");
          });
      });

  </script>
</js:>

