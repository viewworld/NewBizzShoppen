<column-mc:>
  <header back="true"><%= t("call_centre.call_centre_agents.edit.view.title", :name => @call_centre_agent.full_name) %></header>
  <%= semantic_form_for @call_centre_agent, :url => call_centres_call_centre_agent_path(@call_centre_agent), :method => :put do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("call_centre.call_centre_agents.edit.view.button_update") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("call_centre.call_centre_agents.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>