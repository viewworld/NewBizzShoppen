<div class="column_left">
  <div class="pdd_10 no_pdd_t">
    <fieldset class="inputs labels_ta_r labels_200">
      <ol class="align_inputs">
        <%= form.input :first_name %>
        <%= form.input :last_name %>
        <%= form.fields_for :address do |address_form| %>
            <%= address_form.input :address_line_1, :required => false %>
            <%= address_form.input :address_line_2 %>
            <%= address_form.input :address_line_3 %>
            <%= address_form.input :zip_code, :required => false %>
            <%= address_form.input :country, :as => :select, :collection => Country.all, :required => false, :input_html => { :onchange => "refresh_regions_list('user_call_centre_agent_address_attributes');" } %>
            <%= address_form.input :region_id, :as => :select, :collection => regions_collection_for(@call_centre_agent.address.country) %>
        <% end %>
      </ol>
    </fieldset>
  </div>
</div>

<div class="column_right">
  <div class="pdd_10 no_pdd_t">
    <fieldset class="inputs labels_ta_r">
      <ol class="align_inputs">
        <%= form.input :screen_name %>
        <%= form.input :phone %>
        <%= form.input :mobile_phone %>
        <%= form.input :email %>
        <%= form.input :department %>
        <%= form.input :agreement_read, :as => :hidden, :value => "1" %>
      </ol>
    </fieldset>
  </div>
</div>

<clb/>