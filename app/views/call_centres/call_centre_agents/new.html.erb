<%= content_for :column_mc do -%>
  <header back="true"><%= t("call_centre.call_centre_agents.new.view.title") %></header>
  <%= semantic_form_for @call_centre_agent, :url => call_centres_call_centre_agents_path, :method => :post do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
          <div class="hl"></div>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_200">
              <ol>
                <%= form.input :password, :hint => hint_for(@call_centre_agent, :password) %>
                <%= form.input :password_confirmation, :hint => hint_for(@call_centre_agent, :password_confirmation) %>
              </ol>
            </fieldset>
          </div>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= form.submit t("call_centre.call_centre_agents.new.view.button_create") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("call_centre.call_centre_agents.new.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
<% end %>