<%= content_for :column_mc do -%>
  <header back="true"><%= t("call_centre.lead_templates.edit.view.header", :name => @lead_template.name) %><%= image_tag_for_locale %></header>
  <%= semantic_form_for [:call_centres, @lead_template], :method => :put do |form| %>
      <frm title="#{t('call_centre.lead_templates.edit.view.created_by')}: #{@lead_template.creator}">
        <param:content>
          <%= render :partial => '/shared/lead_templates/form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "plus") do %>
            <%= form.submit t("call_centre.lead_templates.edit.view.button_update") %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("call_centre.lead_templates.edit.view.button_cancel"), "history.go(-1)" %>
          <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>