<column-mc:>
  <h1><%= t("leads.index.header") %></h1>

  <%= all_categories_tree(:category_label => lambda {|c| link_to_function c.name, "setCategory(#{c.id})" }) %>

  <%= form_for @search, :url => leads_path do |f| %>
      <%= t("leads.index.search.keyword_label") %><%= f.text_field :with_keyword %>
      <%= t("leads.index.search.deal_value_from_label") %><%= f.text_field :deal_value_from %>
      <%= t("leads.index.search.deal_value_to_label") %> <%= f.text_field :deal_value_to %>
      <%= f.hidden_field :with_category %>
      <%= submit_tag t("leads.index.search.search_button") %>
  <% end %>

  <%= leads_listing @leads, :show_checkboxes => true do |blocks| %>

      <% blocks.right do |lead| %>
        <!-- TODO Should not be here - should be in buyer scope! -->
          <% if current_user &&  current_user.has_role?(:lead_buyer) %>
              <%= link_to current_user.big_buyer? ? t("leads.index.buy_lead") : t("leads.index.add_to_cart_link"), buyers_cart_items_path(:id => lead.id), :method => :post %>
          <% end %>
      <% end %>
  <% end %>
</column-mc:>
