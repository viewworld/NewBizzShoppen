<column-mc:>
  <header><%= t("agent.leads.edit.view.title", :name => @lead.header) %><%= image_tag_for_locale %></header>
  <%= semantic_form_for @lead, :method => :put do |form| %>
      <frm title="Edit">
        <param:content>
          <%= render :partial => '/leads/form', :locals => {:form => form} %>
          <%= hidden_field_tag "token", @lsr.token %>
          <%= hidden_field_tag "confirmation", "agree" %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit "Confirm" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
  <%= semantic_form_for @lead, :method => :put do %>
      <%= hidden_field_tag "token", @lsr.token %>
      <%= hidden_field_tag "confirmation", "disagree" %>
      <param:actions>
        <ibt c="fltri" icon="save">
          <%= submit_tag "Do not confirm" %>
        </ibt>
      </param:actions>
  <% end %>
</column-mc:>