<header>
  <param:content>
    <%= "My deals" %>
  </param:content>
  <% if current_user.has_one_of_roles?(:customer, :admin) %>
      <param:actions>
        <%= form_tag path, :method => :get, :id => "form_new_deal" do %>
            <ul class="header_actions">
              <li>
                <div class="hidden">
                  <%= submit_tag "New" %>
                </div>
                <%= bt_link_to :plus, "Create new deal", "javascript:void", :onclick => "$('#form_new_deal').submit()" %>
              </li>
            </ul>
        <% end %>
      </param:actions>
  <% end %>
</header>