<table>
  <tr>
    <td colspan="2">
      <h2>
        <%= link_to st(featured.header,{},{:length => (featured.general_discount? ? 62 : 42)}), deal_url(featured.slug, :host => params[:domain_name]) %>
        <span class="highlighted">
            <% if featured.general_discount? %>
                <%= t("deals.index.view.save") %> <%= featured.saving %>
            <% else %>
                <%= t("deals.index.view.price") %>
                <%= as_currency(featured.deal_price, featured.currency) %>
                /
                <%= t("deals.index.view.save") %>
                <%= featured.saving %>
            <% end %>
        </span>
      </h2>
    </td>
  </tr>
  <tr>
    <td>
      <div class="deal_description">
        <%= link_to(image_tag(featured.logo.url(:featured), :class => "logo"), deal_url(featured.slug)) if featured.logo %>
        <p><%= link_to st(featured.short_featured_description.to_s, {}, {:length => 300}), deal_url(featured.slug, :host => params[:domain_name]), :style => "color:black; text-decoration: none;" %></p>
        <%= bt_link_to nil, t("deals.index.view.view_deal"), deal_url(featured.slug, :host => params[:domain_name]) %>
        <%= link_to t("deals.index.view.view_deal"), deal_url(featured.slug, :host => params[:domain_name]), :style => "display: inline-block;*display: inline;*zoom: 1;padding: 4px 10px 4px;margin-bottom: 0;font-size: 13px;line-height: 18px;*line-height: 20px;color: #fff;text-align: center;text-shadow: 1px 1px 0 #9c5d09;text-decoration: none;vertical-align: middle;cursor: pointer;background-color: #ff8500;background-image: -ms-linear-gradient(top, #ffb423, #ff8500);background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffb423), to(#ff8500));background-image: -webkit-linear-gradient(top, #ffb423, #ff8500);background-image: -o-linear-gradient(top, #ffb423, #ff8500);background-image: linear-gradient(top, #ffb423, #ff8500);background-image: -moz-linear-gradient(top, #ffb423, #ff8500);background-repeat: repeat-x;border: 1px solid #ff9b00;border-color: #ff9b00 #fc9600 #bd7100;-webkit-border-radius: 4px;-moz-border-radius: 4px;border-radius: 4px;filter: progid:dximagetransform.microsoft.gradient(startColorstr='#ffb423', endColorstr='#ff8500', GradientType=0);filter: progid:dximagetransform.microsoft.gradient(enabled=false);-webkit-box-shadow: inset 0 1px 0 #ffce76;-moz-box-shadow: inset 0 1px 0 #ffce76;box-shadow: inset 0 1px 0 #ffce76;" %>
      </div>
    </td>
    <td>
     <div class="deal_thumb">
       <p>
         <%= link_to(image_tag(featured.images.first.url(:medium), :class => "thumb", :width => "150"), deal_url(featured.slug, :host => params[:domain_name])) if featured.images.first %>
       </p>
     </div>
    </td>
  </tr>
</table>
