<%= content_for 'search-box' do -%>
  <div class="search_box">
    <div class="search_left"></div>
    <div class="search_right"></div>
    <h2><%= t("common.search") %></h2>

    <div class="search_content">
      <%= form_for search, :url => path do |f| %>
          <fieldset class="inputs_vertical">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label :with_keyword, "Keyword" %>
                <%= f.text_field :with_keyword %>
              </li>
              <li class="select">
                <%= f.label "Active" %>
                <%= f.select :active_is, [[t("common.yes_label"), 1], [t("common.no_label"), 0]], {:include_blank => true} %>
              </li>
              <% if current_user.admin? %>
                  <li class="string">
                    <label>Tags</label>
                    <%= render :partial => "shared/tags/search_with_tags", :locals => {:search => search} %>
                  </li>
              <% end %>
              <li style="display: none">
                <%= hidden_field_tag :show_all, params[:show_all] %>
              </li>
            </ol>
            <ol>
              <li class="commit">
                <%= ibt(:class => "bt_green", :icon => "magnify") do %>
                  <%= submit_tag t("leads.index.search.search_button") %>
                <% end %>
                <p>
                  <%= bt_clear_filter_safe %>
                </p>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
<% end %>