<search-box:>
  <div class="search_box">
    <h2><%= t("common.search") %></h2>

    <div class="search_content">
      <%= form_for search, :url => path do |f| %>
          <fieldset class="inputs_vertical">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label :with_keyword, "Keyword" %>
                <%= f.text_field :with_keyword %>
              </li>
              <li class="select">
                <%= f.label "Active" %>
                <%= f.select :active_is, [["yes", 1], ["no", 0]], {:include_blank => true} %>
              </li>
            </ol>
            <ol>
              <li class="commit">
                <ibt c="bt_green" icon="magnify">
                  <%= submit_tag t("leads.index.search.search_button") %>
                </ibt>
                <p>
                  <%= bt_clear_filter_safe %>
                </p>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
</search-box:>