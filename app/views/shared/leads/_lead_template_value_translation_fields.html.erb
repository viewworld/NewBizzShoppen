<div class="lead_template_value_translations_container_<%= f.object.locale %>" style="<%= "display: none;" if @lead.lead_translations.detect { |lt| lt.locale == f.object.locale }.nil? %>">
<li class="string">
  <%= f.label :value, f.object.locale %>
  <%= f.text_field :value %>
  <%= custom_error_for_field(f, :value) %>
</li>
<li class="hidden">
  <%= f.hidden_field :_destroy, :value => "#{'true' if @lead.lead_translations.detect { |lt| lt.locale == f.object.locale }.nil?}", :class => "destroy_hidden_field_template_value_tr_#{f.object.locale}" %>
  <%= f.hidden_field :lead_template_value_id, :value => f.object.lead_template_value_id %>
  <%= f.hidden_field :locale, :value => f.object.locale %>
</li>
</div>