<%= content_for :head do -%>
  <style type="text/css">
    .c
    {
        width: 1300px;
    }
  </style>
<% end %>

<%= render :partial => 'search' %>

<%= content_for :column_mc do -%>
  <header>
    <param:content>
      <%= t("campaign_reports.index.header") %>
    </param:content>

    <param:actions>
      <ul class="header_actions">
        <li class="last">
          <%= bt_link_to nil, t("campaign_reports.index.download_pdf"), callers_campaign_report_path(params[:id], :format => 'pdf') %>
        </li>
      </ul>
    </param:actions>
  </header>

  <div class="reports_table_wrapper">
    <%= render(:text => @html).html_safe %>
  </div>
<% end %>

<%= render :partial => 'js' %>