<%= form_for material, :url => callers_campaign_materials_path(@campaign, :format => :js), :remote => true, :html => {:multipart => true} do |f| %>
  <%= f.file_field :asset %>
  <%= f.submit t("materials.views.index.save_material") %>
<% end %>

<hr/>

<ul style="display:inline;list-style:none">
  <% if materials.any? %>
    <% materials.each do |material| %>
      <li style="display:inline;border: 1px solid #000;"><%= link_to_function material.asset_file_name, "$('#call_result_result_values_attributes_1_value').attr('value','666');" %></li>
    <% end %>
  <% else %>
    <%= t("materials.views.index.no_materials") %>
  <% end %>
</ul>

