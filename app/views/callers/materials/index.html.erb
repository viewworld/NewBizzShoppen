<column-mc:>

  <header>
    <param:content>
      <%= t("materials.views.index.header", :campaign => @campaign.name ) %>
    </param:content>
  </header>

<h1><%= t("materials.views.index.upload_material") %></h1>

<%= semantic_form_for @material, :url => callers_campaign_materials_path(@campaign), :html => {:multipart => true} do |f| %>
  <%= f.input :asset,
              :as => :file,
              :label => t("materials.views.index.file"),
              :required => true %>
  <%= f.commit_button t("materials.views.index.save_material") %>
<% end %>

<hr/>

<ul style="display:inline;list-style:none">
  <% if @materials.any? %>
    <% @materials.each do |material| %>
      <li style="display:inline;border: 1px solid #000;">
        <%= link_to material.asset_file_name, material.url %>
        <%= link_to "#{icon(:remove)} #{t("materials.views.index.delete_material")}".html_safe, callers_campaign_material_path(@campaign,material), :method => :delete, :confirm => t("common.confirmation") %>
      </li>
    <% end %>
  <% else %>
    <%= t("materials.views.index.no_materials") %>
  <% end %>
</ul>

</column-mc:>
