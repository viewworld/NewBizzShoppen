if @material.valid?
    page << "$('#materials_dialog').html('#{escape_javascript(render(:partial => 'callers/materials/materials', :locals => {:material => @campaign.materials.build, :materials => @campaign.materials}))}')"
else
    page << "$('<p>#{@material.errors.full_messages}</p>').dialog({title:'#{t("materials.views.index.failed_to_upload")}'})"
end