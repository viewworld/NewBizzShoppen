<%= content_for :column_mc do -%>
  <%= header(:back => true, :backurl => edit_callers_campaign_path(@campaign)) do |section| %>
    <% section.block_header do %>
      <%= t("campaigns_description.edit.title") %>: <%= @campaign.name %>
    <% end %>
  <% end %>

  <%= javascript_include_tag :ckeditor %>

  <%= semantic_form_for @campaign, :url => callers_campaign_campaigns_description_path(@campaign), :method => :post do |form| %>
    <%= frm(:title => "") do |section| %>
      <% section.block_content do %>
        <%= render :partial => '/callers/campaigns/form_description', :locals => {:form => form, :campaign => @campaign} %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("campaigns_description.edit.button_update"), :name => "commit_create" %>
        <% end %>
        <%= bt_link_to nil, t("campaigns_description.edit.button_cancel"), edit_callers_campaign_path(@campaign), :class => "bt_grey fltr" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
