<%= content_for :column_mc do -%>
  <%= header(:refresh => true) do |section| %>
    <% section.block_header do %>
      <%= t("agent_timesheets.new.scheduled_actions") %>
    <% end %>
    <% section.block_actions do %>
      <ul class="header_actions">
        <li>
          <%= bt_link_to nil, t("users.delayed_jobs.view_all"), users_delayed_jobs_path %>
        </li>
        <li class="last">
          <%= bt_link_to nil, t("agent_timesheets.new.new_timesheet"), new_callers_agent_timesheet_path %>
        </li>
      </ul>
    <% end %>
  <% end %>

  <%= render :partial => 'shared/delayed_jobs/user', :locals => {:user => current_user, :delayed_jobs => current_user.delayed_jobs.limit(5)} %>

  <%= header(:refresh => true) do |section| %>
    <% section.block_header do %>
      <%= t("agent_timesheets.new.cached_timesheets") %>
    <% end %>
  <% end %>

  <%= render :partial => 'shared/cached_timesheets/list', :locals => {:cached_timesheets => AgentTimesheet::Search.new(:current_user => current_user).cached_timesheets.first(5)} %>
<% end %>
