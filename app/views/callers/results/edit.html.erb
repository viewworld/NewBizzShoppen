<%= content_for :column_mc do -%>
  <%= javascript_include_tag "result_dynamic_value" %>
  <header><%= t("results.edit.title") %>: <%= @result.name %></header>
  <%= semantic_form_for [:callers, @campaign, @result], :method => :post do |form| %>
      <frm title="Update existing">
        <param:content>
          <%= render :partial => '/callers/results/form', :locals => {:form => form, :result => @result} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("campaigns.edit.button_update"), :name => "commit_create" %>
          </ibt>
          <%= bt_link_to nil, t("campaigns.new.button_cancel"), url_for(:controller => "callers/results", :action => :index, :campaign_id => @campaign), :class => "bt_grey fltr" %>
        </param:actions>
      </frm>
  <% end %>
<% end %>
<js:>
  <script type="text/javascript">
    enable_dynamic_value();
  </script>
</js:>