<%= content_for :column_mc do -%>
  <%= javascript_include_tag :ckeditor %>
  <%= javascript_include_tag "popup_email_template_editor" %>
  <%= javascript_include_tag "email_template_signature" %>
  <header back="true"><%= t("campaigns.email_templates.edit.view.title", :name => @email_template.subject) %><%= image_tag_for_locale %></header>

  <%= semantic_form_for [:callers, @campaign, @email_template], :url => callers_campaign_email_template_path(@campaign,@email_template), :method => :put do |form| %>
      <frm title="Edit">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("campaigns.email_templates.edit.view.button_update") %>
          </ibt>
          <ibt c="fltri" icon="mail">
            <%= button_to_function t("administration.settings.edit.view.test_send_email"), "test_send_email_prompt('#{test_send_email_callers_campaign_email_template_path(@campaign, @email_template)}')" %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), href(edit_callers_campaign_path(@campaign)) %>
          </ibt>          
        </param:actions>
      </frm>
  <% end %>

  <%= hidden_field_tag :uniq_id, @email_template.uniq_id, {:id => "email_template_editor_uniq_id"} %>
  <%= render :partial => "shared/email_template_popup/template_vars_popup", :locals => { :instance_name => "email_template_body_editor", :email_template => @email_template } %>
  <%= render :partial => "shared/email_template_popup/template_deal_links", :locals => {:instance_name => "email_template_body_editor"} %>

<% end %>

<js:>
  <script type="text/javascript">
      setup_jquery_vars_popup_dialog();
      setup_jquery_deal_links_dialog();
      setup_ckeditor_for_field('email_template_email_template_signature_attributes_body');
      show_hide_custom_signature();
  </script>
</js:>