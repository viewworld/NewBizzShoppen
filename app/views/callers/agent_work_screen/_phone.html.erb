<% if current_user.phone_enabled? %>
    <script>
      flashvars.token = '<%= current_user.flashphoner_token %>';

      $(function(){
          $('#phoneDiv').draggable();
      });

      window.onbeforeunload = function (e) {
          if (currentCall != null) {
              var message = "Current call will be terminated",
                      e = e || window.event;
              // For IE and Firefox
              if (e) {
                  e.returnValue = message;
              }

              // For Safari
              return message;
          }
      };

    </script>
<% end %>