<%= content_for :search_box do -%>
<%= render :partial => "shared/results_production/search", :locals => { :search => @search, :campaign => @campaign,
                                                                        :agent_ids => @agent_ids, :all_results =>@all_results,
                                                                        :result_ids => @result_ids, :date_from => @date_from,
                                                                        :date_to => @date_to, :final => @final, :campaign_users => @campaign_users } %>
<% end %>
<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= @campaign.name %>
    <% end %>
    <% section.block_actions do %>
      <ul class="header_actions">
        <li class="last">
          <%= bt_link_to_function :invoice, t("campaigns.show.advanced_export"), "submit_advanced_export()" %>
        </li>
      </ul>
    <% end %>
  <% end %>

  <div class="frm_tiny pdd_10">

  <%= render :partial => "shared/results_production/table", :locals => { :search => @search, :campaign => @campaign,
                                                                         :agent_ids => @agent_ids, :all_results =>@all_results,
                                                                         :result_ids => @result_ids, :date_from => @date_from,
                                                                         :date_to => @date_to, :final => @final,
                                                                         :results => @results, :headers => @headers, :campaign_users => @campaign_users } %>

<% end %>

<%= content_for :js do -%>
<script type="text/javascript">
    $(function() {
        $(".datepicker").datepicker({ dateFormat: 'yy-mm-dd' });
    });

    function submit_advanced_export(){
        $('#search_new').attr('action', '<%= new_callers_campaign_advanced_export_path(@campaign) %>').submit();
    }
</script>
<% end %>
