<% if @survey_recipient %>
    <% if params[:email_notification].to_i == 1 %>
        display_notice("<%= escape_javascript(t("surveys.shared.successfully_sent")) %>", true);
    <% else %>
        var win = window.open("/callers/survey_recipients/<%= @survey_recipient.uuid %>/edit", null,
                    "height=800,width=700,status=no,toolbar=no,menubar=no,location=no");

        !win ? alert("Window has been blocked by browser, please allow windows for this domain.") : null;
    <% end %>
<% else %>
    alert('Access denied');
<% end %>