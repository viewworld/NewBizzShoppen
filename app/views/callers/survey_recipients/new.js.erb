<% if @survey_recipient %>
    <% if params[:email_notification].to_i == 1 %>
        display_notice("<%= escape_javascript(t("surveys.shared.successfully_sent")) %>", true);
    <% else %>
        $.colorbox({href: "/callers/survey_recipients/<%= @survey_recipient.uuid %>/edit",
            width: 700, height: 800, overlayClose: false
        });
    <% end %>
<% else %>
    alert('Access denied');
<% end %>