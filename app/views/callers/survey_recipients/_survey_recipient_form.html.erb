<%= semantic_form_for survey_recipient, :url => callers_survey_recipient_path(:id => survey_recipient.uuid), :remote => true do |form| %>
    <%= frm(:title => "#{survey_recipient.survey.name}") do |section| %>
      <% section.block_content do %>
        <%= render :partial => 'shared/surveys/form', :locals => {:form => form} %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("surveys.show.view.button_update") %>
        <% end %>
        <%= ibt(:class => "bt_grey fltri") do %>
          <%= button_to_function t("common.cancel_link"), "window.close();" %>
        <% end %>
      <% end %>
    <% end %>
<% end %>