<div class="invoice_show <%= version == :original ? "original" : "copy" %>">
  <table cellpadding="0" cellspacing="0" class="invoice_basic_info">
    <tbody>
    <tr>
      <td rowspan="3" style="width:50%">
        <% if defined?(root_url) %>
            <%= image_tag 'invoices/logo.jpg', :alt => "logo", :width => 150 %>
        <% else %>
            <img src="../images/invoices/logo.jpg" alt="logo" width="150"/>
        <% end %>
      </td>
      <td class="ta_r" style="width:35%;"><strong><%= t("administration.invoices.show.view.number") %>:</strong></td>
      <td><%= invoice.number %> / <%= invoice.creation_date.year %></td>
    </tr>
    <tr>
      <td class="ta_r"><strong><%= t("administration.invoices.show.view.payment_deadline") %>:</strong></td>
      <td><%= invoice.payment_deadline_date %></td>
    </tr>
    <tr>
      <td class="ta_r"><strong><%= t("administration.invoices.show.view.creation_date") %>:</strong></td>
      <td><%= invoice.creation_date %></td>
    </tr>
    </tbody>
  </table>

  <div class="invoice_header"><%= t("customer.invoices.show.view.header") %></div>


  <table cellpadding="0" cellspacing="0" class="from_to_table">
    <thead>
    <tr>
      <th><%= t("administration.invoices.show.view.from") %></th>
      <th><%= t("administration.invoices.show.view.to") %></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><strong><%= invoice.seller_name %></strong></td>
      <td><strong><%= invoice.customer_name %></strong></td>
    </tr>
    <tr>
      <td><%= invoice.seller_address %></td>
      <td><%= invoice.customer_address %></td>
    </tr>
    <tr>
      <td>
        <% if invoice.seller_vat_no.present? %>
            <%= t("administration.invoices.show.view.vat_no") %>: <%= invoice.seller_vat_no %>
        <% end %>
      </td>
      <td>
        <% if invoice.customer_vat_no.present? %>
            <%= t("administration.invoices.show.view.vat_no") %>: <%= invoice.customer_vat_no %>
        <% end %>
      </td>
    </tr>
    <% if invoice.ean_number.present? %>
        <tr>
          <td></td>
          <td><%= t("administration.invoices.show.view.ean_number") %>: <%= invoice.ean_number %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <div class="invoice_data">
    <table cellspacing="0" cellpadding="0">
      <thead>
      <tr>
        <th class="th_id ta_l">#</th>
        <th class="th_name ta_l"><%= t("administration.invoices.show.view.name") %></th>
        <th class="th_qty"><%= t("administration.invoices.show.view.quantity") %></th>
        <th class="th_price"><%= t("administration.invoices.show.view.netto_price") %></th>
        <th class="th_vat"><%= t("administration.invoices.show.view.vat") %></th>
        <th class="th_vat_value"><%= t("administration.invoices.show.view.vat_value") %></th>
        <th class="th_brutto"><%= t("administration.invoices.show.view.brutto_value") %></th>
      </tr>
      </thead>
      <tbody>

      <% invoice.invoice_lines.each_with_index do |invoice_line, index| %>
          <tr>
            <td class="ta_l"><%= index + 1 %></td>
            <td class="ta_l"><%= invoice_line.name %></td>
            <td><%= invoice_line.quantity %></td>
            <td><%= number_to_currency(invoice_line.netto_price, :unit => invoice.currency.symbol) %></td>
            <td><%= invoice_line.vat_rate.zero? ? (t :na, :scope => "administration.invoices.common.view") : number_to_percentage(invoice_line.vat_rate, :precision => 0) %></td>
            <td><%= number_to_currency(invoice_line.vat_value, :unit => invoice.currency.symbol) %></td>
            <td><%= number_to_currency(invoice_line.brutto_value, :unit=>invoice.currency.symbol) %></td>
          </tr>
      <% end %>

      <tr class="space">
        <td colspan="7"></td>
      </tr>

      <tr class="totals">
        <td class="empty" colspan="2"></td>
        <td class="h_cell"><%= t("administration.invoices.show.view.total") %></td>
        <td><strong><%= number_to_currency(invoice.total_netto, :unit => invoice.currency.symbol) %></strong></td>
        <td></td>
        <td><strong><%= number_to_currency(invoice.total_vat, :unit => invoice.currency.symbol) %></strong></td>
        <td><strong><%= number_to_currency(invoice.total, :unit => invoice.currency.symbol) %></strong></td>
      </tr>

      <tr class="space">
        <td colspan="7"></td>
      </tr>

      <% unless invoice.vat_paid_in_customer_country? %>
          <% invoice.invoice_lines_grouped_by_vat_rate.each_with_index do |invoice_line, index| %>
              <tr class="totals">
                <td class="empty" colspan="2"></td>
                <% if index.zero? %>
                    <td class="h_cell"><%= t("administration.invoices.show.view.including") %></td>
                <% else %>
                    <td class="empty"></td>
                <% end %>
                <td class="ta_r"><%= number_to_currency(invoice_line.netto_value_sum, :unit => invoice.currency.symbol) %></td>
                <td class="ta_r"><%= invoice_line.vat_rate.zero? ? (t :na, :scope => "administration.invoices.common.view") : number_to_percentage(invoice_line.vat_rate, :precision => 0) %></td>
                <td class="ta_r"><%= number_to_currency(invoice_line.vat_value_sum, :unit => invoice.currency.symbol) %></td>
                <td class="ta_r"><%= number_to_currency(invoice_line.brutto_value_sum, :unit => invoice.currency.symbol) %></td>
              </tr>
          <% end %>
      <% end %>

      </tbody>
    </table>
  </div>

  <div class="additional_data">
    <p><strong><%= t("administration.invoices.show.view.total_in_words") %>:</strong> <%= invoice.total_in_words %></p>
    <% if invoice.english_version %>
        <p>
          <strong><%= t("administration.invoices.show.view.vat_paid") %>:</strong> <%= invoice.vat_paid_in_customer_country == true ? t("administration.invoices.show.view.yes_label") : t("administration.invoices.show.view.no_label") %> <%= "- #{invoice.vat_text_in_customer_country}" if invoice.vat_text_in_customer_country.present? %>
        </p>
    <% end %>
    <p>
      <strong><%= t("administration.invoices.show.view.payment_method") %>:</strong> <%= invoice.payment_method == "cash" ? t("administration.invoices.common.view.cash") : t("administration.invoices.common.view.bank_transfer") %>
    </p>
    <% if not invoice.payment_method == "cash" %>
        <p style="padding-top:5px"><strong><%= t("administration.invoices.show.view.payment_account") %>:</strong></p>
        <% if invoice.bank_account %>
            <p>
              <%= t("administration.invoices.show.view.bank_name") %>: <%= invoice.bank_account.bank_name %><br/>
              <%= t("administration.invoices.show.view.bank_address") %>: <%= invoice.bank_account.bank_address %><br/>
              <%= t("administration.invoices.show.view.iban_number") %>: <%= invoice.bank_account.iban_no %><br/>
              <%= t("administration.invoices.show.view.local_bank_number") %>: <%= invoice.bank_account.local_bank_number %>
              <br/>
              <%= t("administration.invoices.show.view.swift_code") %>: <%= invoice.bank_account.swift %><br/>
              <% if invoice.bank_account.payment_conditions.present? %>
                  <%= t("administration.invoices.show.view.payment_conditions") %>: <%= invoice.bank_account.payment_conditions %>
              <% end %>
            </p>
        <% end %>
    <% end %>
    <% if invoice.details.present? %>
        <p style="padding-top:5px"><%= invoice.details %></p>
    <% end %>
  </div>

  <div class="status_data">
    <h2><%= t("administration.invoices.show.view.status") %></h2>
    <table>
      <tbody>
       <tr>
         <td><strong><%= t("administration.invoices.show.view.creation_place") %></strong> <%= invoice.creation_place %></td>
         <td><strong><%= t("administration.invoices.show.view.emailed_at") %></strong> <%= invoice.emailed_at or "-" %></td>
         <td><strong><%= t("administration.invoices.show.view.paid_at") %></strong> <%= invoice.paid_at or "-" %></td>
         <td><strong><%= t("administration.invoices.show.view.paid_at") %></strong> <%= invoice.paid_at or "-" %></td>
         <td><strong><%= t("administration.invoices.show.view.cashflow") %></strong> <%= number_to_currency(invoice.cash_flow, :unit => invoice.currency.symbol) %></td>
       </tr>
      </tbody>
    </table>
  </div>
</div>