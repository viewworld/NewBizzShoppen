<column-mc:>
  <header><%= t("customer.restricted_categories.edit.view.header") %></header>

  <%= form_tag customers_restricted_categories_path, :method => :put do %>
    <%= check_box_tag "mark_all", 1, false, :onclick => "mark_all_cbs_with_selector(this.checked,'input:checkbox')" %>
    <ul>
    <% @categories.each_with_index do |category, index| %>
        <li>
          <%= check_box_tag("categories[]", category.id, current_user.restricted_category_ids.to_a.include?(category.id), :id => "category_#{index}") %>
          <%= category.name %>
        </li>
    <% end %>
    </ul>

      <%= submit_tag t("customer.restricted_categories.edit.view.update_button") %>
  <% end %>

</column-mc:>