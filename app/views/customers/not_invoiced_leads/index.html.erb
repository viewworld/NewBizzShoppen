<search-box:>
  <div class="search_box">
    <h2><%= t("customer.invoices.index.view.search_label") %></h2>

    <div class="search_content">
      <%= form_for @search, :url => customers_not_invoiced_leads_path do |f| %>
          <fieldset class="inputs_vertical">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label :with_keyword, t("customer.invoices.index.view.search.with_keyword") %>
                <%= f.text_field :with_keyword %>
              </li>
              <li class="commit">
                <ibt c="bt_green" icon="magnify">
                  <%= submit_tag t("customer.invoices.index.view.search_button") %>
                </ibt>
                <p>
                  <%= bt_clear_filter %>
                </p>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
</search-box:>

<column-mc:>
  <header>
    <param:content>
      <%= t("customer.not_invoiced.index.view.header") %>
    </param:content>

    <param:actions>
      <ul class="header_actions">
        <% if current_user.big_buyer? %>
            <li><%= bt_link_to nil, t("customer.invoices.index.view.pending_leads"), customers_not_invoiced_leads_path %></li>
        <% end %>
        <li><%= bt_link_to nil, t("customer.invoices.index.view.due_invoices"), customers_invoices_path(:search => {:with_paid => 0}) %></li>
        <li class="last"><%= bt_link_to nil, t("customer.invoices.index.view.paid_invoices"), customers_invoices_path(:search => {:with_paid => 1}) %></li>
      </ul>
    </param:actions>
  </header>

  <% unless @lead_purchases.any? %>
    <%= blank_state_message(t("customer.not_invoiced.index.view.no_leads_to_display")) %>
  <% else %>
      <table class="generic" cellspacing="0" cellpadding="0" id="not_invoiced_leads">
        <thead>
        <tr>
        <th class="hl"></th>
        <th><%= t("customer.not_invoiced.index.view.lead_header") %></th>
        <th class="ta_r"><%= t("customer.not_invoiced.index.view.lead_price") %></th>
        <th class="hr"></th>
        </thead>
        <tfoot>
        <tr>
          <td class="fl"></td>
          <td colspan="2"></td>
          <td class="fr"></td>
        </tr>
        </tfoot>
        <tbody id="invoices_list">
        <% @lead_purchases.each do |lp| %>
            <tr class="<%= cycle("odd", "even") %>">
              <td class="cl"></td>
              <td><%= lp.lead.header %></td>
              <td class="ta_r"><%= as_currency(lp.total, lp.lead.currency) %></td>
              <td class="cr"></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>
</column-mc:>