<column-mc:>

  <h1><%= t("customer.lead_requests.index.view.header") %></h1>

  <%= form_for @search, :url => customers_lead_requests_path do |f| %>
      <%= t("customer.lead_requests.index.view.search.keyword_label") %><%= f.text_field :with_keyword %>
      <%= t("customer.lead_requests.index.view.search.category_label") %><%= f.select :with_category, @categories, {:include_blank => true} %>
      <%= t("customer.lead_requests.index.view.search.deal_value_from_label") %><%= f.select :with_deal_value_from, User::DEAL_VALUE_RANGE, {:include_blank => true} %>
      <%= t("customer.lead_requests.index.view.search.deal_value_to_label") %><%= f.select :with_deal_value_to, User::DEAL_VALUE_RANGE, {:include_blank => true} %>
      <%= t("customer.lead_requests.index.view.search.country_label") %><%= f.select :with_country, @countries, {:include_blank => true} %>
      <%= t("customer.lead_requests.index.view.search.requested_by_label") %><%= f.select :with_requested_by, @requestees, {:include_blank => true} %>
      <%= submit_tag t("customer.lead_requests.index.view.search.search_button") %>
  <% end %>

  <%= check_box_tag "mark_all", 1, false, :onclick => "mark_all_cbs_with_selector(this.checked,'input:checkbox')" %>
  <%= bulk_form do %>
  <%= lead_requests_listing @lead_requests, :show_checkboxes => true do |blocks| %>
      <% blocks.tools do |lead_request| %>
          <%= link_to t("customer.lead_requests.index.view.accept_lead_request_link"), customers_lead_request_path(lead_request), {:method => :put} %>

          <%= link_to t("customer.lead_requests.index.view.reject_lead_request_link"),
                      customers_lead_request_path(lead_request),
                      {:method => :delete, :confirm => t("common.confirmation")} %>
      <% end %>
  <% end %>
      <%= hidden_field_tag :route_to %>
      <%= button_to_function t("customer.lead_requests.index.view.button_bulk_destroy_lead_request"), "submitBulkForm('#{customers_bulk_lead_requests_path}#DELETE');" %>
<% end %>
</column-mc:>