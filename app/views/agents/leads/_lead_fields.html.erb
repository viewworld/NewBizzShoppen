<span id="lead_translation_form_<%= f.object.new_record? ? 'lead_lead_translations_attributes_0' : f.object.id %>">
<br />
<span class="locale_span">
  <%= f.object.locale if f.object.respond_to?(:locale) %>
</span>
<%= link_to_function t("agent.leads.new.view.remove_language"), "remove_language('#{f.object.new_record? ? 'lead_lead_translations_attributes_0' : f.object.id}', '#{f.object.locale.blank? ? 'LOCALE_LANG' : f.object.locale}', #{f.object.new_record? ? 'null' : f.object.id})" %>

<%= f.text_field :header %><br />
<%= f.text_area :description %><br />
<%= f.text_area :hidden_description %><br />
<%= f.hidden_field :locale, :class => "locale_hidden_field" %><br />
<% unless f.object.new_record? %>
  <%= f.hidden_field :_destroy, :id => "destroy_hidden_field_#{f.object.id}" %><br />
<% end %>
</span>
<span class="nested_locale_span"></span>