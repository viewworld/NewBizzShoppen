<%= content_for :column_mc do -%>
  <header back="true"><%= t("agent.leads.new.view.title") %></header>

  <%= semantic_form_for [:agents, @lead], :method => :post do |form| %>
      <frm title="#{t('agent.leads.new.view.form_title')}">
        <param:content>
          <%= render :partial => '/shared/leads/form', :locals => {:form => form, :lead => @lead} %>
        </param:content>
        <param:actions>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("agent.leads.new.view.button_create_and_continue"), :name => "commit_continue" %>
          <% end %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("agent.leads.new.view.button_create_and_duplicate"), :name => "commit_duplicate" %>
          <% end %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("agent.leads.new.view.button_create_and_certify"), :name => "commit_certify" %>
          <% end %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("agent.leads.new.view.button_create"), :name => "commit_create" %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          <% end %>
        </param:actions>
      </frm>
  <% end %>
<% end %>