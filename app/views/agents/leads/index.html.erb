<search-box:>
  <div class="search_box">
    <h2>Search</h2>

    <div class="search_content">
      <%= form_for @search, :url => agents_leads_path do |f| %>
          <fieldset class="inputs labels_auto inline_li no_pdd">
            <ol class="no_pdd">
              <li class="string">
                <%= f.text_field :with_keyword %>
              </li>
              <li class="boolean">
                <%= f.check_box :without_inactive, {}, "true", "false" %>
                <%= f.label :without_inactive, t("agent.leads.index.view.filter_with_inactive") %>
              </li>
              <li class="boolean">
                <%= f.check_box :without_outdated, {}, "true", "false" %>
                <%= f.label :without_outdated, t("agent.leads.index.view.filter_with_outdated") %>
              </li>
              <li class="commit">
                <ibt c="bt_green" icon="magnify">
                  <%= submit_tag t("agent.leads.index.view.search_button") %>
                </ibt>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
</search-box:>

<column-mc:>

  <header>
    <param:content>
      <%= "My created leads" %>
    </param:content>

    <param:actions>
      <ul class="header_actions">
        <li class="last">
          <%= bt_link_to :plus, t("agent.leads.index.view.new_lead"), new_agents_lead_path %>
        </li>
      </ul>
    </param:actions>
  </header>

  <%= leads_table @leads, :show_checkboxes => false do |blocks| %>
      <% blocks.tools do |lead| %>
            <ul-actions>
              <li>
                <%= link_to t("agent.leads.index.view.edit"), edit_agents_lead_path(lead) %>
              </li>
              <li>
                <%= link_to t("agent.leads.index.view.destroy"), agents_lead_path(lead), :confirm => t("agent.leads.index.view.destroy_confirmation"), :method => :delete %>
              </li>
            </ul-actions>
      <% end %>
      <% blocks.status_column do |lead| %>
          <%= form_for [:agents, lead], :method => :put do |f| %>
              <%= f.select :published, [[t("agent.leads.index.view.option_published"), 1], [t("agent.leads.index.view.option_not_published"), 0]], {:selected => lead.published ? 1 : 0}, {:onchange => "jQuery(this.form).callRemote()"} %>
          <% end %>
      <% end %>
  <% end %>
</column-mc:>