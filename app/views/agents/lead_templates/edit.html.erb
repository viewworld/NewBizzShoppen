<column-mc:>
  <header back="true"><%= t("agent.lead_templates.edit.view.header", :name => @lead_template.name) %><%= image_tag_for_locale %></header>
  <%= semantic_form_for [:agents, @lead_template], :method => :put do |form| %>
      <frm title="#{t('agent.lead_templates.edit.view.created_by')}: #{@lead_template.creator}">
        <param:content>
          <%= render :partial => '/shared/lead_templates/form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= form.submit t("agent.lead_templates.edit.view.button_update") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("agent.lead_templates.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>