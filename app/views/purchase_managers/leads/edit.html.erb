<column-mc:>
  <%= javascript_include_tag 'lead_template_functions.js' %>
  <header back="true"><%= t("purchase_manager.leads.edit.view.title", :name => @lead.header) %><%= image_tag_for_locale %></header>
<%= semantic_form_for [:purchase_managers, @lead], :method => :put do |form| %>
      <frm title="Edit">
        <param:content>
            <div class="column_left">
              <div class="pdd_10 no_pdd_t">
                <fieldset class="inputs labels_ta_r labels_160">
                  <ol class="align_inputs">
                    <li class="string"><%= form.label t("purchase_manager.leads.edit.view.company_name_label") %><%= @lead.deal.company_name %></li>
                    <li class="string"><%= form.label t("purchase_manager.leads.edit.view.company_address_label") %>
                      <%= @lead.deal.address_line_1 %><%= @lead.deal.address_line_2 %><br />
                      <%= @lead.deal.zip_code %> <%= @lead.deal.address_line_3 %> <%= @lead.deal.country.name %>
                    </li>
                    <li class="string"><%= form.label t("purchase_manager.leads.edit.view.contact_name_label") %><%= @lead.deal.contact_name %></li>
                    <li class="string"><%= form.label t("purchase_manager.leads.edit.view.contact_email_label") %><%= link_to @lead.deal.email_address, "mailto:#{@lead.deal.company_website}" %></li>
                    <li class="string"><%= form.label t("purchase_manager.leads.edit.view.contact_phone_number_label") %><%= @lead.deal.phone_number %></li>
                    <li class="string"><%= form.label t("purchase_manager.leads.edit.view.company_website_label") %><%= @lead.deal.company_website.present? ? link_to(@lead.deal.company_website, @lead.deal.company_website) : "-" %></li>
                    <% if params[:get_deal] == "1" %>
                        <%= form.input :hidden_description, :required => false, :label => t("purchase_manager.leads.new.view.lead_note"), :input_html => {:style => "height: 150px;width:230px;"}  %>
                    <% end %>
                  </ol>
                </fieldset>
              </div>
            </div>
              <%= hidden_field_tag :get_deal, params[:get_deal] %>

              <% unless params[:get_deal] == "1" %>
                <%= render :partial => "form1", :locals => { :form => form } %>
              <% end %>


          <%= render :partial => "form2", :locals => { :form => form } %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("purchase_manager.leads.edit.view.button_update") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
<% end %>
</column-mc:>