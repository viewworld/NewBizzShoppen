<search-box:>
  <div class="search_box">
    <h2>Search</h2>

    <div class="search_content">
      <%= form_for @search, :url => purchase_managers_leads_path do |f| %>
          <fieldset class="inputs_vertical">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label :with_keyword, t("lead_buyer.lead_purchases.index.view.search.keyword_label") %>
                <%= f.text_field :with_keyword %>
              </li>
              <li class="boolean">
                <%= f.check_box :without_inactive, {}, "true", "false" %>
                <%= f.label :without_inactive, t("purchase_manager.leads.index.view.filter_with_inactive") %>
              </li>
              <li class="boolean">
                <%= f.check_box :without_outdated, {}, "true", "false" %>
                <%= f.label :without_outdated, t("purchase_manager.leads.index.view.filter_with_outdated") %>
              </li>
              <li class="commit">
                <ibt c="bt_green" icon="magnify">
                  <%= submit_tag t("purchase_manager.leads.index.view.search_button") %>
                </ibt>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
</search-box:>

<column-mc:>

  <header>
    <param:content>
      <%= "My created leads" %>
    </param:content>

    <param:actions>
      <%= form_tag new_purchase_managers_lead_path, :method => :get, :id => "form_new_lead" do %>
          <span style="position:absolute;top: 5px; right: 110px;">
            <%= select_tag :category_id, options_for_select(Category.without_locked.map { |c| [c.name, c.id] }) %>
          </span>
          <ul class="header_actions">
            <li class="last">
              <div class="hidden">
                <%= submit_tag "New" %>
              </div>
              <%= bt_link_to :plus, t("purchase_manager.leads.index.view.new_lead"), "javascript:void", :onclick => "$('#form_new_lead').submit()" %>
            </li>
          </ul>
      <% end %>
    </param:actions>
  </header>

  <% if @leads.blank? %>
      <%= blank_state_message %>
  <% else %>
      <%= leads_table @leads, :show_checkboxes => false do |blocks| %>
          <% blocks.tools do |lead| %>
              <ul-actions>
                <li>
                  <%= link_to t("purchase_manager.leads.index.view.edit"), edit_purchase_managers_lead_path(lead) %>
                </li>
                <li>
                  <%= link_to t("purchase_manager.leads.index.view.destroy"), purchase_managers_lead_path(lead), :confirm => t("purchase_manager.leads.index.view.destroy_confirmation"), :method => :delete %>
                </li>
              </ul-actions>
          <% end %>
          <% blocks.status_column do |lead| %>
              <%= lead_status(lead) %>
          <% end %>
      <% end %>
  <% end %>
</column-mc:>