<search-box:>
  <div class="search_box">
    <h2><%= t("common.search") %></h2>

    <div class="search_content">
      <%= form_for @search, :url => purchase_managers_leads_path do |f| %>
          <fieldset class="inputs_vertical">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label :with_keyword, t("lead_buyer.lead_purchases.index.view.search.keyword_label") %>
                <%= f.text_field :with_keyword %>
              </li>
              <li class="select">
                <%= f.label t("leads.index.search.category_label") %>
                <%= f.select :with_category, nested_set_options(@categories.all), :include_blank => true %>
              </li>
              <li class="commit">
                <ibt c="bt_green" icon="magnify">
                  <%= submit_tag t("purchase_manager.leads.index.view.search_button") %>
                </ibt>
                <p>
                  <%= bt_clear_filter %>
                </p>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
</search-box:>

<column-mc:>

  <header>
    <param:content>
      <%= t("purchase_manager.leads.index.view.header") %>
    </param:content>
  </header>

  <% if @leads.blank? %>
      <%= blank_state_message %>
  <% else %>
      <%= leads_table @leads, :show_checkboxes => false do |blocks| %>
          <% blocks.tools do |lead| %>
              <ul-actions>
                <li>
                  <%= link_to t("purchase_manager.leads.index.view.edit"), edit_purchase_managers_lead_path(lead), :class => "default_action" %>
                </li>
                <li>
                  <%= link_to t("purchase_manager.leads.index.view.destroy"), purchase_managers_lead_path(lead), :confirm => t("purchase_manager.leads.index.view.destroy_confirmation"), :method => :delete %>
                </li>
              </ul-actions>
          <% end %>
          <% blocks.status_column do |lead| %>
              <%= lead_status(lead) %>
          <% end %>
      <% end %>
  <% end %>
</column-mc:>