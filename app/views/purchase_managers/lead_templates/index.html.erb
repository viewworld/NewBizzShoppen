<search-box:>
  <div class="search_box">
    <h2>Search</h2>

    <div class="search_content">

      <%= form_for @search, :url => purchase_managers_lead_templates_path do |f| %>
          <fieldset class="inputs_vertical">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label :with_keyword, t("purchase_manager.lead_templates.index.view.search.keyword_label") %>
                <%= f.text_field :with_keyword %>
              </li>
              <li class="select">
                <%= f.label t("purchase_manager.lead_templates.index.view.search.category_label") %>
                <%= f.select :with_category, @categories, :include_blank => true %>
              </li>
              <li class="commit">
                <ibt c="bt_green" icon="magnify">
                  <%= submit_tag t("purchase_manager.lead_templates.index.view.search_button") %>
                </ibt>
                <ibt c="fltri bt_grey">
                  <%= bt_clear_filter %>
                </ibt>
              </li>
            </ol>
          </fieldset>
      <% end %>
    </div>
  </div>
</search-box:>

<column-mc:>

  <header>
    <param:content>
      <%= t("purchase_manager.lead_templates.index.view.header") %>
    </param:content>
    <param:actions>

      <ul class="header_actions">
        <li class="last">
          <%= bt_link_to :plus, t("purchase_manager.lead_templates.index.view.new_template"), new_purchase_managers_lead_template_path(:lead_template => {:category_id => @search.with_category}) %>
        </li>
      </ul>
    </param:actions>
  </header>

  <% if @lead_templates.blank? %>
      <%= blank_state_message %>
  <% else %>
      <%= lead_templates_table @lead_templates, :show_checkboxes => false, :show_active_column => true, :paginate_table => true do |blocks| %>
          <% blocks.tools do |lead_template| %>
              <ul-actions>
                <li><%= link_to t("purchase_manager.lead_templates.index.view.edit"), edit_purchase_managers_lead_template_path(lead_template), :class => "default_action" %></li>
                <li><%= link_to t("purchase_manager.lead_templates.index.view.destroy"), purchase_managers_lead_template_path(lead_template), :method => :delete, :confirm => t("purchase_manager.lead_templates.index.view.destroy_template_confirmation_message") %></li>
              </ul-actions>
          <% end %>
      <% end %>
  <% end %>


</column-mc:>