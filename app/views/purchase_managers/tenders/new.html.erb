<column-mc:>
  <header back="true"><%= t("purchase_manager.tenders.new.view.title") %><%= image_tag_for_locale %></header>

  <%= semantic_form_for [:purchase_manager, @lead], :url => purchase_managers_tenders_path,  :method => :post do |form| %>
      <frm title="Create new">
        <param:content>
          <%= render :partial => '/shared/leads/form', :locals => {:form => form, :lead => @lead} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("purchase_manager.tenders.new.view.button_create_and_continue"), :name => "commit_continue" %>
          </ibt>
          <ibt c="fltri" icon="save">
            <%= form.submit t("purchase_manager.tenders.new.view.button_create_and_duplicate"), :name => "commit_duplicate" %>
          </ibt>
          <ibt c="fltri" icon="save">
            <%= form.submit t("purchase_manager.tenders.new.view.button_create_and_certify"), :name => "commit_certify" %>
          </ibt>
          <ibt c="fltri" icon="save">
            <%= form.submit t("purchase_manager.tenders.new.view.button_create"), :name => "commit_create" %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("purchase_manager.tenders.new.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>