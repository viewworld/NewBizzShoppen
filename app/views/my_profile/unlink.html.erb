<column-mc:>
  <header><%= t("password.edit.view.password_label") %></header>

  <%= semantic_form_for @user, :url => social_unlink_my_profile_path, :method => :put do |form| %>
      <frm title="Change your password">
        <param:content>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol>
                <%= form.input :password %>
                <%= form.input :password_confirmation %>
              </ol>
            </fieldset>
          </div>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit "Unlink" %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function "Cancel", "history.go(-1)" %>
          </ibt>            
        </param:actions>
      </frm>
  <% end %>
</column-mc:>