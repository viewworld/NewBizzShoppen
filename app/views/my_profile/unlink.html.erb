<%= content_for :column_mc do -%>
  <%= header do |section| %>
    <% section.block_header do %>
      <%= t("my_profile.unlink.view.header") %>
    <% end %>
  <% end %>

  <%= semantic_form_for @user, :url => social_unlink_my_profile_path, :method => :put do |form| %>
      <%= frm(:title => t('my_profile.unlink.view.form_title')) do %>
        <% section.block_content do %>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol>
                <%= form.input :password %>
                <%= form.input :password_confirmation %>
              </ol>
            </fieldset>
          </div>
        <% end %>
        <% section.block_actions do %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("my_profile.unlink.view.button_unlink") %>
          <% end %>
          <%= ibt(:class => "bt_grey fltri") do %>
            <%= button_to_function t("my_profile.unlink.view.button_cancel"), "history.go(-1)" %>
          <% end %>
        <% end %>
      <% end %>
  <% end %>
<% end %>
