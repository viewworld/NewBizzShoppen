<column-mc:>
  <header><%= t("my_profile.edit.view.header") %></header>

  <%= semantic_form_for @user, :url => my_profile_path, :method => :put do |form| %>
      <frm title="#{t('my_profile.edit.view.edit_account')}">
        <param:header>
          <% if current_user.has_role?(:customer) and !current_user.has_role?(:category_buyer) %>
            <%= bt_link_to nil, t("my_profile.edit.view.interests_settings"), edit_customers_interests_path, :class => "fltr" %>
          <% end %>
          <%= bt_link_to nil, t("my_profile.edit.view.change_password"), password_path, :class => "fltr" %>
        </param:header>
        <param:content>
          <%= render :partial => "form", :locals => { :form => form } %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("password.edit.view.button_update_user") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>            
        </param:actions>
      </frm>
  <% end %>
</column-mc:>