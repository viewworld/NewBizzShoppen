<%= content_for :column_mc do -%>
  <%= header(:back => true, :backurl => suppliers_deals_path) do |section| %>
    <% section.block_header do %>
      <%= t("supplier.deals.new.view.title") %>
    <% end %>
  <% end %>

  <%= semantic_form_for [:suppliers, @deal], :method => :post do |form| %>
    <%= frm(:title => "#{t('supplier.deals.new.view.form_title')}") do %>
      <% section.block_content do %>
        <%= render :partial => 'shared/deals/form', :locals => {:form => form, :deal => @deal} %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("supplier.deals.new.view.create_button"), :name => "commit_create", :onclick => "select_options_to_submit('deal_deal_template_ids_')" %>
        <% end %>
        <%= ibt(:class => "fltri bt_grey") do %>
          <%= button_to_function t("common.cancel_link"), "history.go(-1)" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
