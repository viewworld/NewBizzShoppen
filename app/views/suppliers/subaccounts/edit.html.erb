<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("supplier.subaccounts.edit.view.title", :name => @user.full_name) %> (<%= @user.role.to_s.humanize %>)
    <% end %>
  <% end %>

  <%= semantic_form_for [:suppliers, @user], :url => suppliers_subaccount_path(@user), :method => :put do |form| %>
    <frm>
      <% section.block_content do %>
        <%= render :partial => 'form', :locals => {:form => form} %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("supplier.subaccounts.edit.view.button_update") %>
        <% end %>
        <%= ibt(:class => "bt_grey fltri") do %>
          <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
