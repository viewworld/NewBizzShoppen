<%= content_for :column_mc do -%>
  <header back="true"><%= t("supplier.subaccounts.new.view.title") %> <%= params[:role].humanize %></header>
  <%= semantic_form_for [:suppliers, @user], :url => suppliers_subaccounts_path(:role => params[:role]), :method => :post do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
          <div class="hl"></div>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol>
                <%= form.input :password, :hint => hint_for(@user, :password) %>
                <%= form.input :password_confirmation, :hint => hint_for(@user, :password_confirmation) %>
              </ol>
            </fieldset>
          </div>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= form.submit t("supplier.subaccounts.new.view.button_create") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("administration.settings.edit.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
<% end %>