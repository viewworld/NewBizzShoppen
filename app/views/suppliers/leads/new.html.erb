<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t('lead_supplier.leads.index.view.header') %>
    <% end %>
  <% end %>

  <%= semantic_form_for [:suppliers, @lead], :method => :post do |form| %>
    <frm title="#{t('agent.leads.new.view.form_title')}">
      <param:content>
        <%= render :partial => '/shared/leads/form', :locals => {:form => form, :lead => @lead} %>
      </param:content>
      <param:actions>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t('lead_supplier.leads.index.view.button_create') %>
        <% end %>
        <%= ibt(:class => "bt_grey fltri") do %>
          <%= button_to_function t('administration.settings.edit.view.button_cancel'), 'history.go(-1)' %>
        <% end %>
      </param:actions>
    </frm>
  <% end %>
<% end %>
