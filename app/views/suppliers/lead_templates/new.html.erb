<%= content_for :column_mc do -%>
  <header back="true"><%= t("supplier.lead_templates.new.view.header") %><%= image_tag_for_locale %></header>
  <%= semantic_form_for [:suppliers, @lead_template], :method => :put do |form| %>
      <frm title="">
        <param:content>
          <%= render :partial => '/shared/lead_templates/form', :locals => {:form => form} %>
          <%= hidden_field_tag :deal_id, params[:deal_id] %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= form.submit t("supplier.lead_templates.new.view.button_create") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("supplier.lead_templates.new.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
<% end %>