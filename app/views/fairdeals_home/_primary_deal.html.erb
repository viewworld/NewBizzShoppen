<% unless primary_deal.blank? %>
    <% email_form_id = ActiveSupport::SecureRandom.hex(16) %>
      <div class="frm_plain primary_deal">
        <div class="frm_head">
            <h2><%= link_to primary_deal.header, deal_path(primary_deal.slug) %></h2>
            <div class="splash splash_red"><span><%= primary_deal.group_deal? ? t("deals.index.view.group_deal_splash_label") : t("deals.index.view.fair_deal_splash_label") %></span></div>
        </div>
        <div class="frm_content" style="min-height:255px">

          <div class="deal_info">
            <p>
              <%= image_tag primary_deal.logo.url if primary_deal.logo %>
            </p>

            <% if primary_deal.general_discount? %>
                 <p style="font-size:20px; padding: 4px 0 10px">
                <%= t("deals.index.view.save") %> <span class="b red"><%= primary_deal.saving %></span>
                 </p>
            <% else %>
                <p class="b">
                    <%= t("deals.index.view.normal_price") %>: <%= as_currency(primary_deal.deal_price, primary_deal.currency) %>
                </p>

                <p class="new_price">
                  <%= t("deals.index.view.fairdeals_price") %>:<br/><%= as_currency(primary_deal.discounted_price, primary_deal.currency) %>
                </p>

                <p class="you_save">
                  <%= t("deals.index.view.you_save") %>:<br/><%= as_currency(primary_deal.deal_price - primary_deal.discounted_price, primary_deal.currency) %> <span class="b red">(<%= primary_deal.saving %>)</span>
                </p>
            <% end %>

            <p>
              <%= bt_link_to nil, t("deals.index.view.view_deal"), deal_path(primary_deal.slug) %>
            </p>
            <br />
            <p><%= group_deal_leads_created_and_missing(primary_deal) %></p>

          </div>

          <div class="deal_desc">
            <div class="deal_featured_desc">
              <%= raw primary_deal.featured_description %>
            </div>

            <% if primary_deal.group_deal? %>
                <div id="countdown_<%= email_form_id %>" class="countdown">
                  <span class="countdown_title">Time left:</span>
                  <div class="dash days_dash">
                    <span class="dash_title"><%= t("deals.show.view.days") %></span>

                    <div class="digit">0</div>
                    <div class="digit">0</div>
                  </div>
                  <div class="dash hours_dash">
                    <span class="dash_title"><%= t("deals.show.view.hours") %></span>

                    <div class="digit">0</div>
                    <div class="digit">0</div>
                  </div>
                  <div class="dash minutes_dash">
                    <span class="dash_title"><%= t("deals.show.view.minutes") %></span>

                    <div class="digit">0</div>
                    <div class="digit">0</div>
                  </div>
                  <div class="dash seconds_dash">
                    <span class="dash_title"><%= t("deals.show.view.seconds") %></span>

                    <div class="digit">0</div>
                    <div class="digit">0</div>
                  </div>
                </div>
            <% end %>

          </div>

          <clb/>

          <div>
            <div id="modal_for_share_deal_by_email_<%= email_form_id %>" style="display:none;">
              <%= render :partial => "share_deal_by_email/new", :locals => {:deal => primary_deal, :email_form_id => email_form_id } %>
            </div>
          </div>
          <!-- end / main deal -->

          <%= link_to "show comments (0)", "#", :class => "toggle_comments show_comments", :style => "display: none" %>
          <%= link_to "hide comments", "#", :class => "toggle_comments hide_comments" %>
