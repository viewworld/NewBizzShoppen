<head:>
  <%= javascript_include_tag "global_template_editor" %>
</head:>

<column-mc:>


<div class="grid_680 fltl">
  <div class="homepage_intro">
    <% if youtube_introduction %>
      <div class="youtube_thumb">
        <%= link_to image_tag(youtube_introduction.image ? youtube_introduction.image.url : "https://img.youtube.com/vi/#{youtube_introduction.url.extract_youtube_video_id}/default.jpg", :class => "thumb"), "https://www.youtube.com/embed/#{youtube_introduction.url.extract_youtube_video_id}?autoplay=1&rel=0&border=0", :class => "introduction_video", :id => "introduction_video_link" %>
      </div>
    <% end %>
    <div class="intro_content">
      <%= blurb("blurb_start_page_fairdeals") %>
    </div>
  </div>
  <% if @primary_deal %>
      <div id="primary_group_deal" class="frm_plain primary_deal">
          <%= render :partial => 'primary_deal', :locals => {:primary_deal => @primary_deal} %>
      </div>
  <% end %>

  <!--- other deals --->

  <div class="other_deals">

    <div class="col" id="secondary_featured_deal_1">
      <% if featured = FeaturedDeal.where(:position => 1).first and featured.deal %>
          <frm c="no_marg" title="#{link_to featured.deal.header, deal_path(featured.deal.slug)}">
            <param:content>
              <div class="pdd_10">
                <p class="deal_desc"><%= featured.deal.description.truncate_letters(55) %></p>

                <p class="deal_thumb">
                  <%= image_tag featured.deal.logo.url(:medium), :class => "thumb" if featured.deal.logo %>
                </p>

                <p class="deal_price">
                  <%= t("deals.index.view.price") %>
                  <span class="b green"><%= as_currency(featured.deal.discounted_price, featured.deal.currency) %></span>
                  <br/>
                  <%= t("deals.index.view.save") %> <span class="b red"><%= featured.deal.saving %></span>
                  <% if user_signed_in? and current_user.has_role?(:purchase_manager) and !featured.deal.requested_by?(current_user) %>
                      <%= bt_link_to nil, t("deals.index.view.contact_me"), new_purchase_managers_lead_path(:deal_id => featured.deal.id) %>
                  <% end %>
                </p>
              </div>
            </param:content>
          </frm>
      <% end %>
    </div>

    <div class="col col_middle" id="secondary_featured_deal_2">
      <% if featured = FeaturedDeal.where(:position => 2).first and featured.deal %>
          <frm c="no_marg" title="#{link_to featured.deal.header, deal_path(featured.deal.slug)}">
            <param:content>
              <div class="pdd_10">
                <p class="deal_desc"><%= featured.deal.description.truncate_letters(55) %></p>

                <p class="deal_thumb">
                  <%= image_tag featured.deal.logo.url(:medium), :class => "thumb" if featured.deal.logo %>
                </p>

                <p class="deal_price">
                  <%= t("deals.index.view.price") %>
                  <span class="b green"><%= as_currency(featured.deal.discounted_price, featured.deal.currency) %></span>
                  <br/>
                  <%= t("deals.index.view.save") %> <span class="b red"><%= featured.deal.saving %></span>
                  <% if user_signed_in? and current_user.has_role?(:purchase_manager) and !featured.deal.requested_by?(current_user) %>
                      <%= bt_link_to nil, t("deals.index.view.contact_me"), new_purchase_managers_lead_path(:deal_id => featured.deal.id) %>
                  <% end %>
                </p>
              </div>
            </param:content>
          </frm>
      <% end %>
    </div>

    <div class="col" id="secondary_featured_deal_3">
      <% if featured = FeaturedDeal.where(:position => 3).first and featured.deal %>
          <frm c="no_marg" title="#{link_to featured.deal.header, deal_path(featured.deal.slug)}">
            <param:content>
              <div class="pdd_10">
                <p class="deal_desc"><%= featured.deal.description.truncate_words(5) %></p>

                <p class="deal_thumb">
                  <%= image_tag featured.deal.logo.url(:medium), :class => "thumb" if featured.deal.logo %>
                </p>

                <p class="deal_price">
                  <%= t("deals.index.view.price") %>
                  <span class="b green"><%= as_currency(featured.deal.discounted_price, featured.deal.currency) %></span>
                  <br/>
                  <%= t("deals.index.view.save") %> <span class="b red"><%= featured.deal.saving %></span>
                  <% if user_signed_in? and current_user.has_role?(:purchase_manager) and !featured.deal.requested_by?(current_user) %>
                      <%= bt_link_to nil, t("deals.index.view.contact_me"), new_purchase_managers_lead_path(:deal_id => featured.deal.id) %>
                  <% end %>
                </p>
              </div>
            </param:content>
          </frm>
      <% end %>
    </div>
  </div>
  <!--- end / other deals --->
</div>
<div class="grid_280 fltr">

  <div class="homepage_actions frm_dark pdd_10">
    <% unless user_signed_in? %>
        <%= bt_link_to nil, t("fairdeals_home.show.view.get_free_account"), new_purchase_manager_account_path, :class => "bt_max" %>
    <% end %>
    <%= bt_link_to nil, t("fairdeals_home.show.view.browse_our_deals"), deal_categories_path, :class => "bt_grey bt_max" %>
    <%= bt_link_to nil, t("fairdeals_home.show.view.find_a_vendor"), new_purchase_managers_tender_path, :class => "bt_grey bt_max" %>
  </div>



  <% unless user_signed_in? %>

      <frm title="I have an account" c="no_marg">
        <div class="pdd_10">
          <%= semantic_form_for(:user, :url => session_path(:user)) do |f| %>
              <fieldset class="inputs labels_90 inputs_130 no_pdd">
                <ol class="align_inputs no_pdd">
                  <%= f.input :email, :input_html => {:tabindex => 1} %>
                  <%= f.input :password, :label => raw(I18n.t("activerecord.attributes.user.password") + content_tag(:span, link_to(t("home.show.view.forgotten_password_link"), new_password_path(User)), :class => "label_link")), :input_html => {:tabindex => 2}, :wrapper_html => {:class => "rltv"} %>
                  <%= f.input :remember_me, :as => :boolean, :required => false, :input_html => {:tabindex => 3} %>
                  <li class="commit">
                    <ibt>
                      <%= f.submit t("home.show.view.sign_in"), :tabindex => 4 %>
                    </ibt>
                  </li>
                </ol>
              </fieldset>
          <% end %>
        </div>
      </frm>

  <% end %>


  <div class="news">
    <!--
    <h2><%= t('purchase_manager_home.show.view.header_news') %><%= link_to t("purchase_manager_home.show.view.complete_list_link"), news_index_path(:search => {:with_subclass => 'PurchaseManager'}) %></h2>
    -->
    <ul>
      <% if @news.any? %>
          <%= render :partial => 'news', :collection => @news, :as => :news %>
      <% else %>
          <%= render :partial => 'shared/blank_data_li' %>
      <% end %>
    </ul>

  </div>

</div>
<clb/>

<script>
    $(document).ready(function() {
        $('.introduction_video').colorbox({iframe:true, innerWidth:560, innerHeight:349});
    });
</script>

</column-mc:>
