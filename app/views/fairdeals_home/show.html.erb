<column-mc:>

  <div class="grid_680 fltl">
    <% if youtube_introduction %>
        <div class="homepage_intro">
          <div class="youtube_thumb">
            <%= link_to image_tag(youtube_introduction.image ? youtube_introduction.image.url : "https://img.youtube.com/vi/#{youtube_introduction.url.extract_youtube_video_id}/default.jpg"), "https://www.youtube.com/embed/#{youtube_introduction.url.extract_youtube_video_id}?autoplay=1&rel=0&border=0", :class => "introduction_video", :id => "introduction_video_link" %>
          </div>
        </div>
    <% end %>

    <% if @primary_deal %>
        <div id="primary_group_deal">
          <%= render :partial => 'primary_deal', :locals => {:primary_deal => @primary_deal} %>
        </div>
    <% end %>

    <!--- other deals --->

    <div class="other_deals">
      <%= render :partial => 'secondary_deal', :locals => {:position => 1} %>
      <%= render :partial => 'secondary_deal', :locals => {:position => 2, :middle => "col_middle"} %>
      <%= render :partial => 'secondary_deal', :locals => {:position => 3} %>
    </div>

    <clb/>
    <br/>

    <div class="other_deals">
      <%= render :partial => 'secondary_deal', :locals => {:position => 4} %>
      <%= render :partial => 'secondary_deal', :locals => {:position => 5, :middle => "col_middle"} %>
      <%= render :partial => 'secondary_deal', :locals => {:position => 6} %>
    </div>

    <clb/>
    <br/>

    <div class="other_deals">
      <%= render :partial => 'secondary_deal', :locals => {:position => 7} %>
      <%= render :partial => 'secondary_deal', :locals => {:position => 8, :middle => "col_middle"} %>
      <%= render :partial => 'secondary_deal', :locals => {:position => 9} %>
    </div>

    <!--- end / other deals --->
  </div>

  <div class="grid_280 fltr">
    <div class="homepage_actions frm_dark pdd_10">
      <% unless user_signed_in? %>
          <%= bt_link_to nil, t("fairdeals_home.show.view.get_free_account"), new_purchase_manager_account_path, :class => "bt_max" %>
      <% end %>
      <%= bt_link_to nil, t("fairdeals_home.show.view.browse_our_deals"), deal_categories_path, :class => "bt_grey bt_max" %>
      <%= bt_link_to nil, t("fairdeals_home.show.view.find_a_vendor"), new_purchase_managers_tender_path, :class => "bt_grey bt_max" %>
    </div>



    <% unless user_signed_in? %>

        <frm title="I have an account">
          <div class="pdd_10">
            <%= semantic_form_for(:user, :url => session_path(:user)) do |f| %>
                <fieldset class="inputs labels_100 inputs_180 no_pdd">
                  <ol class="align_inputs no_pdd">
                    <%= render :partial => "shared/accounts/social_login_for_sign_in" %>
                  </ol>
                </fieldset>
                <fieldset class="inputs labels_90 inputs_130 no_pdd">
                  <ol class="align_inputs no_pdd">
                    <%= f.input :email, :input_html => {:tabindex => 1} %>
                    <%= f.input :password, :label => raw(I18n.t("activerecord.attributes.user.password") + content_tag(:span, link_to(t("home.show.view.forgotten_password_link"), new_password_path(User)), :class => "label_link")), :input_html => {:tabindex => 2}, :wrapper_html => {:class => "rltv"} %>
                    <%= f.input :remember_me, :as => :boolean, :required => false, :input_html => {:tabindex => 3} %>
                    <li class="commit">
                      <ibt>
                        <%= f.submit t("home.show.view.sign_in"), :tabindex => 4 %>
                      </ibt>
                    </li>
                  </ol>
                </fieldset>
            <% end %>
          </div>
        </frm>

    <% end %>

    <% if Settings.contact_us_phone.present? or Settings.contact_us_email.present? or Settings.contact_us_skype.present? %>
        <div class="frm_dark pdd_10 contact_us_frm">
          <h2><%= t("fairdeals_home.show.view.contact_us") %></h2>

          <% if Settings.contact_us_phone.present? %>
              <p><%= image_tag("fairdeals/icons/phone.png") %><strong><%= Settings.contact_us_phone %></strong></p>
          <% end %>
          <% if Settings.contact_us_email.present? %>
              <p><%= image_tag("fairdeals/icons/mail.png") %><strong><%= link_to Settings.contact_us_email, "mailto:#{Settings.contact_us_email}" %></strong></p>
          <% end %>
          <% if Settings.contact_us_skype.present? %>
              <p><%= image_tag("fairdeals/icons/skype.png") %><strong><%= link_to Settings.contact_us_skype, "skype:#{Settings.contact_us_skype}" %></strong></p>
          <% end %>
        </div>
    <% end %>

    <div class="frm_dark pdd_10">
      <h2><%= t("fairdeals_home.show.view.request_a_deal") %></h2>

      <%= form_for :email_deal_request_preview, :url => deal_requests_path do |f| %>


          <fieldset class="inputs labels_70 inputs_160 no_pdd">
            <ol class="no_pdd">
              <li class="string">
                <%= f.label t("fairdeals_home.show.view.deal_request.name") %>
                <%= f.text_field :name %> <%= custom_error_for_object_and_field(@email_deal_request_preview, :name) %>
                <% if !hint_for("category_request", :name).nil? %>
                    <p class="inline-hints"><%= hint_for("category_request", :name) %></p>
                <% end %>
              </li>
              <li class="string">
                <%= f.label t("fairdeals_home.show.view.deal_request.email_from") %>
                <%= f.text_field :email_from %> <%= custom_error_for_object_and_field(@email_deal_request_preview, :email_from) %>
                <% if !hint_for("category_request", :email_from).nil? %>
                    <p class="inline-hints"><%= hint_for("category_request", :email_from) %></p>
                <% end %>
              </li>
              <li class="string">
                <%= f.label t("fairdeals_home.show.view.deal_request.phone_number") %>
                <%= f.text_field :phone_number %> <%= custom_error_for_object_and_field(@email_deal_request_preview, :phone_number) %>
                <% if !hint_for("category_request", :phone_number).nil? %>
                  <p class="inline-hints"><%= hint_for("category_request", :phone_number) %></p>
                <% end %>
              </li>
              <li class="text">
                <%#= f.label t("fairdeals_home.show.view.deal_request.description") %>
                <%= f.text_area :deal_description, :style => "width:240px;height: 80px;" %><%= custom_error_for_object_and_field(@email_deal_request_preview, :deal_description) %>
                <% if !hint_for("category_request", :deal_description).nil? %>
                  <p class="inline-hints"><%= hint_for("category_request", :deal_description) %></p>
                <% end %>
              </li>
              <li class="commit">
                <ibt c="fltri">
                  <%= submit_tag t("fairdeals_home.show.view.deal_request.send_email_button") %>
                </ibt>
              </li>
            </ol>
          </fieldset>


      <% end %>
    </div>

    <div class="news">
      <!--
    <h2><%= t('purchase_manager_home.show.view.header_news') %><%= link_to t("purchase_manager_home.show.view.complete_list_link"), news_index_path(:search => {:with_subclass => 'PurchaseManager'}) %></h2>
    -->
      <ul>
        <% if @news.any? %>
            <%= render :partial => 'news', :collection => @news, :as => :news %>
        <% else %>
            <%= render :partial => 'shared/blank_data_li' %>
        <% end %>
      </ul>

    </div>

  </div>
  <clb/>

  <script>
      $(document).ready(function() {
          $('.introduction_video').colorbox({iframe:true, innerWidth:560, innerHeight:349});
      });
  </script>

</column-mc:>
