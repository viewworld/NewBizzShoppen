<div class="col <%= (defined? middle) ? middle : '' %>" id="secondary_featured_deal_<%= position %>">
  <% if featured = FeaturedDeal.where(:position => position).first and featured.deal %>
      <frm c="no_marg" title="#{link_to featured.deal.header, deal_path(featured.deal.slug)}">
        <param:content>
          <div class="pdd_10">
            <p class="deal_desc"><%= featured.deal.description.to_s.truncate_letters(55) %></p>

            <p class="deal_thumb">
              <%= image_tag featured.deal.logo.url(:medium), :class => "thumb" if featured.deal.logo %>
            </p>

            <p class="deal_price">
              <%= t("deals.index.view.price") %>
              <span class="b green"><%= as_currency(featured.deal.discounted_price, featured.deal.currency) %></span>
              <br/>
              <%= t("deals.index.view.save") %> <span class="b red"><%= featured.deal.saving %></span>
              <%= bt_link_to nil, t("deals.index.view.view_deal"), deal_path(featured.deal.slug) %>
            </p>
          </div>
        </param:content>
      </frm>
  <% end %>
</div>