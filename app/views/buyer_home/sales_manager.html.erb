<column-mc:>

  <header>
    <param:content>
      <%= t("buyer_home.show.view.header") %>
    </param:content>

    <param:actions>
      <ul class="header_actions">
        <% if current_user.team_buyers? %>
            <li><%= bt_link_to :users, t("buyer_home.show.view.add_team_member"), new_customers_subaccount_path(:role => "lead_user") %></li>
        <% end %>
        <li class="last"><%= bt_link_to :key, t("buyer_home.show.view.sign_out"), '/logout' %></li>
      </ul>
    </param:actions>
  </header>

  <div class="pdd_5 no_pdd_b">
    <p><%= blurb("blurb_buyer_home") %></p>

  </div>

  <hl pdd="15"></hl>

  <div id="leads_summary">
    <div class="column_1to3 fltl" id="news">
      <frm title="#{t('buyer_home.show.view.header_news')}">
        <param:header>
          <%= bt_link_to nil, t("buyer_home.show.view.complete_list_link"), news_index_path(:search => {:with_subclass => 'SalesManager'}), :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'news', :collection => @news, :as => :news %>
          </ul>
        </param:content>
      </frm>
    </div>
    <div class="column_1to3 fltl" style="padding: 0 15px" id="my_leads">
      <frm title="#{t('buyer_home.show.view.header_my_leads')}">
        <param:header>
          <%= bt_link_to nil, t("buyer_home.show.view.complete_list_link"), buyers_lead_purchases_path, :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'my_lead', :collection => @my_leads, :as => :lead %>
          </ul>
        </param:content>
      </frm>
    </div>
    <div class="column_1to3 fltl" id="latest_leads">
      <frm title="#{t('buyer_home.show.view.header_latest_leads_in_my_categories')}">
        <param:header>
          <%= bt_link_to nil, t("buyer_home.show.view.complete_list_link"), leads_path(:search => {:latest => true}), :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'lead', :collection => @latest_leads, :as => :lead %>
          </ul>
        </param:content>
      </frm>
    </div>
    <clb/>
  </div>

</column-mc:>

<js:>
  <script type="text/javascript">

      jQuery(document).ready(function() {
          jQuery(".solid_list li").bind("click", function() {
              window.location = $(this).find('a.read_more').attr("href");
          });
      });

  </script>
</js:>

