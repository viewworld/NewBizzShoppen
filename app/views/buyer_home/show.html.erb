<column-mc:>

  <header>Welcome</header>
  <p><%= t("buyer_home.show.view.header_welcome") %> <%= link_to t("buyer_home.show.view.agent_link"), agent_home_path %></p>

  <%= link_to t("buyer_home.show.view.create_new_buyer_account"), new_buyer_account_path %>

  <br/>

    <div id="leads_summary">
    <div class="column_1to3 fltl">
      <frm title="#{t('agent_home.show.view.header_best_sellers')}">
        <param:header>
          <%= bt_link_to nil,t("buyer_home.show.view.complete_list_link"), leads_path(:search => {:bestsellers => true}), :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'lead', :collection => @best_sellers, :as => :lead %>
          </ul>
        </param:content>
      </frm>
    </div>
    <div class="column_1to3 fltl" style="padding: 0 15px">
      <frm title="#{t('agent_home.show.view.header_latest_leads')}">
        <param:header>
          <%= bt_link_to nil, t("buyer_home.show.view.complete_list_link"), leads_path(:search => {:latest => true}), :class => "fltr" %>
        </param:header>
        <param:content>
          <ul class="solid_list">
            <%= render :partial => 'lead', :collection => @latest_leads, :as => :lead %>
          </ul>
        </param:content>
      </frm>
    </div>
    <div class="column_1to3 fltl">
      <frm title="#{t('agent_home.show.view.header_news')}">
        <param:header>
          <%= bt_link_to nil, t("agent_home.show.view.complete_list_link"), leads_path(:search => {:latest => true}), :class => "fltr" %>
        </param:header>
        <param:content>
          content
        </param:content>
      </frm>
    </div>
    <clb/>
  </div>

</column-mc:>

