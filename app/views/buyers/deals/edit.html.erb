<column-mc:>
  <header back="true" backurl="#{buyers_deals_path}">
    <param:content>
      <%= t("buyer.deals.edit.view.title") %>
    </param:content>
    <param:actions>
      <ul class="header_actions">
        <li>
          <% if current_user.has_role?(:deal_maker) %>
            <%= bt_link_to nil, t("buyer.deals.edit.view.edit_deal_request_details_email_template"), edit_email_template_path(@deal.deal_request_details_email_template, :deal_id => @deal.id) %>
          <% end %>
        </li>
        <li class="last">
          <%= bt_link_to nil, t("buyer.deals.edit.view.preview"), deal_path(@deal) %>
        </li>
      </ul>
    </param:actions>
  </header>

  <%= semantic_form_for [:buyers, @deal], :method => :put, :html => {:multipart => true} do |form| %>
      <frm title="Edit deal">
        <param:content>
          <%= render :partial => 'shared/deals/form', :locals => {:form => form, :deal => @deal} %>
          <%= render :partial => "shared/deals/assets_management", :locals => {:form => form, :path => "buyers_deal_assets_path",
                                                                               :remove_path => "buyers_deal_asset_path"} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("buyer.deals.edit.view.update_button"), :name => "commit_update", :onclick => "select_options_to_submit('deal_deal_template_ids_')" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>