<column-mc:>
  <header back="true"><%= t("buyer.cart.show.view.header") %></header>

  <table class="generic">
    <thead>
    <tr>
      <th class="hl"></th>
      <th>#</th>
      <th><%= t("buyer.cart.show.view.lead_name_header") %></th>
      <th><%= t("buyer.cart.show.view.lead_price_header") %></th>
      <th></th>
      <th class="hr"></th>
    </tr>
    </thead>
    <tbody>
    <% @cart.items.each_with_index do |lead, i| %>
        <tr>
          <td class="cl"></td>
          <td><%= i+1 %></td>
          <td><%= lead.header %></td>
          <td><%= as_currency(lead.price, lead.currency) %></td>
          <td><%= link_to t("buyer.cart.show.view.remove_item_link"), buyers_cart_item_path(lead.id), :method => :delete %></td>
          <td class="cr"></td>
        </tr>
    <% end %>


    <tr>
      <td class="cl"></td>
      <td></td>
      <td><%= t("buyer.cart.show.view.total_label") %></td>
      <td><%= @cart.total %></td>
      <td></td>
      <td class="cr"></td>
    </tr>

    <tr class="main_actions">
      <td class="cl"></td>
      <td class="no_pdd_lr" colspan="4">
        <% form_tag APP_CONFIG[:paypal_url] do %>
            <%= hidden_field_tag :cmd, "_s-xclick" %>
            <%= hidden_field_tag :encrypted, @cart.paypal_encrypted(categories_url, payment_notifications_url(:secret => APP_CONFIG[:paypal_secret])) %>
            <ibt c="fltri">
              <%= submit_tag t("buyer.cart.show.view.checkout_link") %>
            </ibt>
        <% end %>
      </td>
      <td class="cr"></td>
    </tr>

    <tfoot>
    <tr>
      <td class="fl"></td>
      <td colspan="4"></td>
      <td class="fr"></td>
    </tr>
    </tfoot>
    </tbody>
  </table>

</column-mc:>