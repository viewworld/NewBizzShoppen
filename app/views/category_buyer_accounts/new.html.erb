<column-mc:>
  <header back="true"><%= t("category_buyer_accounts.new.view.title") %></header>

  <div class="pdd_5 no_pdd_b">
    <%= blurb('blurb_sign_up') %>
  </div>
  
  <hl pdd="15"/>

  <%= semantic_form_for @user, :url => "/#{params[:slug]}/account" do |form| %>
      <frm title="Create new account" c="no_marg">
        <param:content>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol>
                <%= form.input :first_name %>
                <%= form.input :last_name %>
                <%= form.input :company_name, :label => t("category_buyer_accounts.new.view.company_name") %>
                <%= form.fields_for :address do |address_form| %>
                  <%= address_form.input :address_line_1 %>
                  <%= address_form.input :address_line_2 %>
                  <%= address_form.input :address_line_3 %>
                  <%= address_form.input :zip_code %>
                  <%= address_form.input :country, :as => :select, :collection => Country.all %>
                <% end %>
                <%= form.input :vat_number %>
              </ol>
            </fieldset>
          </div>

          <hl/>

          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol class="align_inputs">
                <%= form.input :screen_name %>
                <%= form.input :phone %>
                <%= form.input :email %>
              </ol>
            </fieldset>
          </div>

          <hl/>

          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol class="align_inputs">
                <%= form.input :password %>
                <%= form.input :password_confirmation %>
              </ol>
            </fieldset>
          </div>

          <hl/>

          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol class="align_inputs">
                <%= form.input :team_buyers, :as => :boolean, :label => t("category_buyer_accounts.new.view.enable_team_buyers") %>
                <%= form.input :agreement_read, :as => :boolean %>
                <%= form.input :newsletter_on, :as => :boolean %>
              </ol>
            </fieldset>
          </div>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= form.input :category_id, :as => :hidden %>
            <%= form.submit t("category_buyer_accounts.new.view.button_create_account") %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>