<column-mc:>
  <header back="true"><%= t("category_buyer_accounts.new.view.title") %></header>

  <div class="pdd_5 no_pdd_b">
    <%= blurb('blurb_sign_up') %>
  </div>

  <hl pdd="15"/>

  <fieldset class="inputs labels_100 no_pdd" style="margin-top:-5px;">
    <ol class="no_pdd">
      <li class="string social_login">
        <label><%= t("buyer_accounts.new.view.janrain_sign_up_label") %></label>

        <div class="txt">
          <% unless Rails.env.test? %>
              <%= link_to_rpx image_tag("icons/social_login.png"), "https://#{Nbs::Application.config.action_mailer.default_url_options[:host]}/#{params[:slug]}/account" %>
              <%= javascript_include_rpx "https://#{Nbs::Application.config.action_mailer.default_url_options[:host]}/#{params[:slug]}/account" %>
          <% end %>
        </div>
      </li>
    </ol>
  </fieldset>

  <%= semantic_form_for @user, :url => "/#{params[:slug]}/account" do |form| %>
      <frm title="Create new account" c="no_marg">
        <param:content>
          <div class="column_left">
            <div class="pdd_10 no_pdd_t">
              <fieldset class="inputs labels_ta_r labels_200">
                <ol>
                  <%= form.input :first_name %>
                  <%= form.input :last_name %>
                  <%= form.input :company_name %>
                  <%= form.fields_for :address do |address_form| %>
                      <%= address_form.input :address_line_1 %>
                      <%= address_form.input :address_line_2 %>
                      <%= address_form.input :address_line_3 %>
                      <%= address_form.input :zip_code %>
                      <%= address_form.input :country_id, :as => :select, :collection => Country.all, :input_html => {:onchange => "refresh_regions_list('user_category_buyer_address_attributes');"} %>
                      <%= address_form.input :region_id, :as => :select, :collection => regions_collection_for(form.object.address.country) %>
                  <% end %>
                  <%= form.input :vat_number %>
                </ol>
              </fieldset>
            </div>
          </div>


          <div class="column_right">
            <div class="pdd_10 no_pdd_t">
              <fieldset class="inputs labels_ta_r">
                <ol class="align_inputs">
                  <%= form.input :screen_name %>
                  <%= form.input :phone %>
                  <%= form.input :email %>
                  <%= form.input :password %>
                  <%= form.input :password_confirmation %>
                  <%= form.input :team_buyers, :as => :boolean %>
                  <%= form.input :agreement_read, :as => :boolean, :label => "#{t("common.agree_to")} #{link_to_main_page_article('terms_conditions', {:popup => true}, {:id => 'agreement_modal_box'})}".html_safe %>
                  <%= form.input :newsletter_on, :as => :boolean %>
                </ol>
              </fieldset>
            </div>
          </div>

          <clb/>

        </param:content>
        <param:actions>
          <ibt c="fltri" icon="plus">
            <%= form.input :buying_category_ids, :as => :hidden %>
            <%= form.submit t("category_buyer_accounts.new.view.button_create_account") %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>