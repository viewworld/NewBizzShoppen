<column-mc:>
  <header back="true"><%= t("deal_maker_users.new.view.new_account", :role => params[:user_type]) %></header>

  <%= semantic_form_for @user, :url => deal_maker_users_path(:user_type => params[:user_type]), :as => :user do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("deal_maker_users.new.view.button_create") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("deal_maker_users.new.view.button_cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>