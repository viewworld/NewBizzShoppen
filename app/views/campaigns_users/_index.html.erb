<header back="true" backurl="#{path_back}"><%= t("campaigns_users.index.title") %></header>

<table id="campaigns" class="generic">
  <thead>
  <tr>
    <th class="hl"></th>
    <th class="no_pdd_lr" style="width:10px">&nbsp;</th>
    <th><%= t("campaigns_users.index.table.agent") %></th>
    <th class="ta_c"><%= t("campaigns_users.index.table.campaigns") %></th>
    <th class="hr"></th>
  </tr>
  </thead>
  <tfoot>
  <tr>
    <td class="fl"></td>
    <td colspan="3"></td>
    <td class="fr"></td>
  </tr>
  </tfoot>
  <tbody>
  <%= form_tag path, :method => :put, :id => "campaign_user_form" do %>
      <% call_centres.each do |call_centre| %>
          <tr>
            <td class="cl"></td>
            <td class="no_pdd_lr">
              <%= check_box_tag "campaign_user_id_#{call_centre.id}", call_centre.id, campaign.users.include?(call_centre), :name => "campaign_user_ids[]", :class => "cb_cu_#{call_centre.id}" %>
            </td>
            <td><%= call_centre.full_name %>
              <%= link_to_function "(select all in call centre)", "$.each($('.cb_cu_3'), function(index, val){$('#' + this.id).attr('checked',true)})" %>
            </td>
            <td class="ta_c"><%= call_centre.campaigns.size %></td>
            <td class="cr"></td>
          </tr>
          <% call_centre.subaccounts.each do |cc_agent| %>
              <% cc_agent = User::CallCentreAgent.find(cc_agent.id) %>
              <tr>
                <td class="cl"></td>
                <td class="no_pdd_lr">
                  <%= check_box_tag "campaign_user_id_#{cc_agent.id}", cc_agent.id, campaign.users.include?(cc_agent), :name => "campaign_user_ids[]", :class => "cb_cu_#{call_centre.id}" %>
                </td>
                <td class="td_child_node"><%= cc_agent.full_name %></td>
                <td class="ta_c"><%= cc_agent.campaigns.size %></td>
                <td class="cr"></td>
              </tr>
          <% end %>
      <% end %>
  <% end %>

  <tr class="main_actions">
    <td class="cl"></td>
    <td colspan="3" class="no_pdd_lr">
      <%= bt_link_to :users, t("campaigns_users.index.button_assign"), "javascript:void(0)", :onclick => "$('#campaign_user_form').submit();" %>
    </td>
    <td class="cr"></td>
  </tr>
  </tbody>
</table>