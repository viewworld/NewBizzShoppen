<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("supplier.deal_certification_requests.edit.view.title") %>
    <% end %>
  <% end %>

  <%= semantic_form_for @deal, :method => :put, :url => deal_path(@deal) do |form| %>
    <%= frm(:title => @deal.header) do |section| %>
      <% section.block_content do %>
        <%= hidden_field_tag :id, params[:id] %>
        <%= hidden_field_tag :token, params[:token] %>
        <%= render :partial => 'shared/deals/form', :locals => {:form => form, :deal => @deal, :categories => []} %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("supplier.deal_certification_requests.edit.view.reject"), :name => "commit_update", :onclick => "$('#accept').val('false');select_options_to_submit('deal_deal_template_ids_')" %>
        <% end %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("supplier.deal_certification_requests.edit.view.certify"), :name => "commit_update", :onclick => "$('#accept').val('true');select_options_to_submit('deal_deal_template_ids_')" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
