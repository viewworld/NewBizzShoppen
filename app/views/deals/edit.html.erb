<column-mc:>
  <header back="true"><%= t("buyer.deal_certification_requests.edit.view.title") %></header>

  <%= semantic_form_for @deal, :method => :put, :url => deal_path(@deal) do |form| %>
      <frm title="Edit deal">
        <param:content>
          <%= hidden_field_tag :id, params[:id] %>
          <%= hidden_field_tag :token, params[:token] %>
          <%= render :partial => 'shared/deals/form', :locals => {:form => form, :deal => @deal, :categories => []} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("buyer.deal_certification_requests.edit.view.reject"), :name => "commit_update", :onclick => "$('#accept').val('false');select_options_to_submit('deal_deal_template_ids_')" %>
          </ibt>
          <ibt c="fltri" icon="save">
            <%= form.submit t("buyer.deal_certification_requests.edit.view.certify"), :name => "commit_update", :onclick => "$('#accept').val('true');select_options_to_submit('deal_deal_template_ids_')" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>

</column-mc:>