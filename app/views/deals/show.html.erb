<column-mc:>
  <header back="true"><%= t("deals.show.view.header") %></header>

  <div class="grid_800 fltl pdd_10 no_pdd_r">
    <div class="element_description">
      <h2><%= @deal.header %></h2>

      <h3><%= t("deals.show.view.description_label") %></h3>

      <p><%= @deal.description %></p>
    </div>
  </div>

  <div class="grid_280 fltr pdd_10 no_pdd_lr">
    <div class="frm_tiny">
      <div class="pdd_10">
        <ul class="elements_list">
          <li>
            <div>
              <span class="label"><%= t("deals.show.view.end_date") %></span>
              <%= format_date @deal.end_date %>
            </div>
          </li>


        </ul>
      </div>
    </div>
  </div>
  <clb/>
</column-mc:>