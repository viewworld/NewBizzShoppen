<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("call_centre_agent.leads.edit.view.title", :name => @lead.header) %>
      <%= image_tag_for_locale %>
    <% end %>
  <% end %>

  <%= semantic_form_for [:call_centre_agents, @lead], :method => :put do |form| %>
    <%= frm(:title => "#{@lead.header}") do %>
      <% section.block_content do %>
        <%= render :partial => '/shared/leads/form', :locals => { :form => form }  %>
      <% end %>
      <% section.block_actions do %>
        <% if @lead.can_be_certified? %>
            <%= ibt(:class => "fltri") do %>
              <%= link_to t("agent.leads.index.view.certify"), call_centre_agents_lead_certifications_path(@lead), :method => :post %>
            <% end %>
        <% elsif @lead.can_be_recertified? %>
            <%= ibt(:class => "fltri") do %>
              <%= link_to t("agent.leads.index.view.recertify"), call_centre_agents_lead_certifications_path(@lead), :method => :post %>
            <% end %>
        <% end %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
          <%= form.submit t("call_centre_agent.leads.edit.view.button_update") %>
        <% end %>
        <%= ibt(:class => "bt_grey fltri") do %>
          <%= button_to_function t("call_centre_agent.leads.edit.view.button_cancel"), "history.go(-1)" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
