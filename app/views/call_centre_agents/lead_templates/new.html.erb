<%= content_for :column_mc do -%>
  <%= header(:back => true) do |section| %>
    <% section.block_header do %>
      <%= t("call_centre_agent.lead_templates.new.view.header") %>
      <%= image_tag_for_locale %>
    <% end %>
  <% end %>

  <%= semantic_form_for [:call_centre_agents, @lead_template], :method => :put do |form| %>
    <%= frm(:title => "") do |section| %>
      <% section.block_content do %>
        <%= render :partial => '/shared/lead_templates/form', :locals => {:form => form} %>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "plus") do %>
          <%= form.submit t("call_centre_agent.lead_templates.new.view.button_create") %>
        <% end %>
        <%= ibt(:class => "bt_grey fltri") do %>
          <%= button_to_function t("call_centre_agent.lead_templates.new.view.button_cancel"), "history.go(-1)" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
