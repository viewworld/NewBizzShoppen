<column-mc:>
  <header back="true" backurl="#{call_centre_agents_deals_path}"><%= t("call_centre_agent.deals.edit.view.title") %></header>

  <%= semantic_form_for [:call_centre_agents, @deal], :method => :put, :html => {:multipart => true} do |form| %>
      <frm title="Edit deal">
        <param:content>
          <%= render :partial => 'shared/deals/form', :locals => {:form => form, :deal => @deal} %>
          <%= render :partial => "shared/deals/assets_management", :locals => {:form => form, :path => "call_centre_agents_deal_assets_path",
                                                                               :download_path => "download_call_centre_agents_deal_asset_path",
                                                                               :remove_path => "call_centre_agents_asset_path"} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("call_centre_agent.deals.edit.view.update_button"), :name => "commit_update", :onclick => "select_options_to_submit('deal_deal_template_ids_')" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>