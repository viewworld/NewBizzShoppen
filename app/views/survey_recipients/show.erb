<%= content_for :column_mc do -%>
  <%= header do |section| %>
    <% section.block_header do %>
      <%= @survey.name %>
    <% end %>
  <% end %>

  <% unless @survey.welcome_page.blank? %>
    <%= @survey.welcome_page.html_safe %>
  <% end %>
  <%= semantic_form_for @survey_recipient, :url => survey_recipient_path(:id => @survey_recipient.uuid) do |form| %>
      <frm>
        <% section.block_content do %>
          <%= render :partial => 'shared/surveys/form', :locals => {:form => form} %>
        <% end %>
        <% section.block_actions do %>
          <%= ibt(:class => "fltri", :icon => "save") do %>
            <%= form.submit t("surveys.show.view.button_update") %>
          <% end %>
        <% end %>
      <% end %>
  <% end %>
<% end %>
