<%= content_for :column_mc do -%>
  <%= header do |section| %>
    <% section.block_header do %>
      <%= t("comments.threads.edit.view.header", :header => @thread.commentable.header) %>
    <% end %>
  <% end %>

  <%= semantic_form_for :comment, @comment, :url => comments_thread_path(@comment), :html => {:method => :put} do |f| %>
    <frm>
      <% section.block_header do %>
      <% end %>
      <% section.block_content do %>
          <div class="pdd_10 no_pdd_t">
            <fieldset class="inputs labels_ta_r labels_240">
              <ol class="align_inputs">
              <%= f.input :title %>
              <%= f.input :body %>
              </ol>
            </fieldset>
          </div>
      <% end %>
      <% section.block_actions do %>
        <%= ibt(:class => "fltri", :icon => "save") do %>
           <%= f.commit_button t("comments.threads.edit.view.update_comment_button") %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
