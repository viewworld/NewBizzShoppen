<header back="true"><%= t("call_results.new.title") %></header>

<%= semantic_form_for path, :method => :post do |form| %>
    <frm title="Create new">
      <param:content>
        <%= render :partial => '/call_results/form', :locals => {:form => form, :contact => contact, :call_result => call_result} %>

      </param:content>
      <param:actions>
        <ibt c="fltri" icon="save">
          <%= form.submit t("call_results.new.save_button"), :name => "commit_create" %>
        </ibt>
        <%= bt_link_to nil, t("call_results.new.cancel_button"), back_path, :class => "bt_grey fltr" %>
      </param:actions>
    </frm>
<% end %>