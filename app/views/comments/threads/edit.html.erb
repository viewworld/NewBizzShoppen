<column-mc:>
  <header><%= t("comments.threads.edit.view.header", :header => @thread.commentable.header) %></header>

     <%= semantic_form_for :comment, @thread, :url => comments_thread_path(@thread), :html => {:method => :put} do |f| %>
      <frm>
        <param:header>
        </param:header>
        <param:content>
            <div class="pdd_10 no_pdd_t">
              <fieldset class="inputs labels_ta_r labels_240">
                <ol class="align_inputs">
                <%= f.input :title %>
                <%= f.input :body %>
                </ol>
              </fieldset>
            </div>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
             <%= f.commit_button t("comments.threads.edit.view.update_comment_button") %>
          </ibt>
        </param:actions>
      </frm>
   <% end %>
</column-mc:>