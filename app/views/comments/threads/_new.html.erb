<div id="new_comment_div_<%= lead.id %>"></div>
<%= semantic_form_for Comment.new, :remote => true, :as => :comment, :url => comments_lead_threads_path(lead), :html => {:method => :post, :id => "new_comment_#{lead.id}"} do |f| %>
    <fieldset class="inputs labels_ta_r labels_80">
      <ol class="align_inputs">
        <li class="header">
          <h3><%= t('comments.threads.show.view.start_new_thread') %></h3>
        </li>
        <%= f.input :title %>
        <%= f.input :body, :as => :text, :input_html => {:style => "width:380px;height: 100px;"} %>
        <li class="commit">
          <%= ibt(:icon => "plus") do %>
            <%= button_to_function t("comments.threads.show.view.create_comment_button"), "validate_form('#new_comment_#{lead.id}')" %>
          <% end %>
        </li>
      </ol>
    </fieldset>
<% end %>
