<div id="new_comment_div_<%= lead.id %>"></div>
<%= semantic_remote_form_for Comment.new, :as => :comment, :url => comments_lead_threads_path(lead), :html => {:method => :post, :id => "new_comment_#{lead.id}"} do |f| %>
    <frm title="#{t('comments.threads.show.view.start_new_thread')}">
      <param:content>
        <div class="pdd_10 no_pdd_t">
          <fieldset class="inputs labels_ta_r">
            <ol class="align_inputs">
              <%= f.input :title %>
              <%= f.input :body, :as => :text, :input_html => {:style => "width:450px;height: 200px;" }%>
            </ol>
          </fieldset>
        </div>
      </param:content>
      <param:actions>
        <ibt c="fltri" icon="plus">
          <%= button_to_function t("comments.threads.show.view.create_comment_button"), "validate_form('#new_comment_#{lead.id}')"  %>
        </ibt>
      </param:actions>
    </frm>
<% end %>