<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <title>nbz</title>
  <%= stylesheet_link_tag "ocss_core", "style", "colorbox" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery.colorbox-min' %>
  <%= javascript_include_tag 'custom' %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="head">
  <div id="head_bg"></div>
</div>

<div id="container" class="c">
  <div id="top">
    <div class="fltr">
      <% if user_signed_in? %>
          <div style="background:red;color:white;padding:3px;">
            <b>You are now: <%= current_user.class.name %> ::: (<%= current_user.roles.to_a.map(& :to_s).to_sentence %>)</b>
          </div>
          <%= link_to t("layout.my_profile_link"), my_profile_path %>
          <%= link_to t("layout.logout_link", :user_email => current_user.email), '/logout' %>
      <% end %>
    </div>
    <h1><%= link_to "New Bizz Shoppen", root_path %></h1>
    <%= render('/layouts/cart') if current_user && current_user.has_role?(:lead_buyer) %>
    <%= render '/layouts/locale_selection' %>
  </div>

  <div id="nav">
    <%= render "layouts/main_menu" %>
  </div>

  <div id="content">
    <div class="pdd_10 no_pdd_t">
      <br/>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <br/>

      <column-mc:/>
    </div>
  </div>

  <div id="footer">
    <%= render "layouts/footer" %>
  </div>
</div>


</body>
</html>