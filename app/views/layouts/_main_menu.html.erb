<ul class="nav<%= (user_signed_in? and current_user.has_role?(:admin)) ? " admin_nav" : "" %>">
  <%= main_menu_link_to_role_specific_home_page %>
  <% if @home_category %>
      <%= main_menu_link_to t("layout.main_menu.shared.browse_leads"), category_home_page_leads_path(@home_category.cached_slug), :tab => "browse_leads" %>
  <% else %>
      <%= main_menu_link_to t("layout.main_menu.shared.browse_leads"), categories_path, :tab => "browse_leads" %>
  <% end %>
  <% if current_user %>
      <% current_user.roles_sorted.each do |role| %>
          <%= render "/layouts/menu_sections/#{role.to_s}" %>
      <% end %>
  <% end %>
  <% if current_user and (current_user.admin? or current_user.agent?) %>
    <%= main_menu_link_to t("layout.main_menu.shared.comments"), comments_threads_path, :tab => "comments" %>
  <% end %>
</ul>

<script type="text/javascript">
    jQuery(document).ready(function()
    {
        $('.has_child').each(function() {
            var t = $(this);
            if ( t.width() > t.find(".subnav").width())
            {
                t.find(".subnav").css("width", t.width());
            }
        })
    })
</script>