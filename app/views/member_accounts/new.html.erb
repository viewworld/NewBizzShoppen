<column-mc:>
  <%= render :partial => "shared/accounts/new_account_title", :locals => {:accounts_type => "purchase_manager_accounts", :user => @user} %>

  <div class="pdd_5 no_pdd_b">
    <%= blurb('blurb_sign_up') %>
    <br/>
  </div>

  <hl pdd="15"/>

  <div class="frm_tiny" style="margin-bottom:10px;">
    <div class="pdd_10">
      <p><%= t("member_accounts.new.view.janrain_sign_up_label") %>
        <% unless Rails.env.test? %>
            <%= link_to_rpx image_tag("icons/social_login.png"), member_accounts_url %>
            <%= javascript_include_rpx member_accounts_url %>
        <% end %>
      </p>
      <%= render(:partial => "shared/accounts/rpx_message", :locals => {:user => @user}) unless @user.rpx_identifier.blank? %>
    </div>
  </div>


  <%= render :partial => "sign_in/purchase_manager_form", :locals => {:user => @user, :url => member_accounts_path} %>
</column-mc:>