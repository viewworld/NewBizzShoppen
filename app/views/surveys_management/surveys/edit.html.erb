<column-mc:>
  <header back="true"><%= t("surveys_management.surveys.edit.view.header") %></header>

  <%= semantic_form_for @survey, :url => surveys_management_survey_path(@survey) do |form| %>
      <frm>
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("surveys_management.surveys.edit.view.button_update") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("surveys_management.shared.cancel"), "history.go(-1)" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</column-mc:>