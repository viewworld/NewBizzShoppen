<div id="question_form">
  <%= semantic_form_for @survey_question, :url => surveys_management_survey_survey_questions_path, :remote => true do |form| %>
      <frm title="New #{t('surveys_management.shared.question_types.type'+@survey_question.question_type.to_s).downcase} #{t('surveys_management.shared.question').downcase}">
        <param:content>
          <%= render :partial => 'form', :locals => {:form => form} %>
        </param:content>
        <param:actions>
          <ibt c="fltri" icon="save">
            <%= form.submit t("surveys_management.surveys.new.view.button_create") %>
          </ibt>
          <ibt c="bt_grey fltri">
            <%= button_to_function t("surveys_management.shared.cancel"), "$.colorbox.close()" %>
          </ibt>
        </param:actions>
      </frm>
  <% end %>
</div>

