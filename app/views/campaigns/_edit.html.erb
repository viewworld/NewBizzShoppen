<%= semantic_form_for [namespace, campaign], :method => :put do |form| %>
    <frm title="Edit">
      <param:header>
        <%= bt_link_to nil, t("campaigns.edit.agent_assignment_button"), path_to_assignment, :class => "fltr" %>
      </param:header>
      <param:content>
        <%= render :partial => '/campaigns/form', :locals => {:form => form, :campaign => campaign} %>
      </param:content>
      <param:actions>
        <ibt c="fltri" icon="save">
          <%= form.submit t("campaigns.edit.button_update"), :name => "commit_create" %>
        </ibt>
        <%= bt_link_to nil, t("campaigns.edit.button_cancel"), path_back, :class => "bt_grey fltr" %>
      </param:actions>
    </frm>
<% end %>