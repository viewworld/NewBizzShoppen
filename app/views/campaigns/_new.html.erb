<header back="true" backurl="#{path_back}"><%= t("campaigns.new.title") %></header>

<%= semantic_form_for [namespace, campaign], :method => :post do |form| %>
    <frm title="Create new">
      <param:content>
        <%= render :partial => '/campaigns/form', :locals => {:form => form, :campaign => campaign} %>
      </param:content>
      <param:actions>
        <ibt c="fltri" icon="save">
          <%= form.submit t("campaigns.new.button_create"), :name => "commit_create" %>
        </ibt>
        <%= bt_link_to nil, t("campaigns.new.button_cancel"), path_back, :class => "bt_grey fltr" %>
      </param:actions>
    </frm>
<% end %>