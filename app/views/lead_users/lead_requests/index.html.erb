<column-mc:>
   <h1><%= t("lead_user.lead_requests.index.view.header") %></h1>

  <%= form_for @search, :url => lead_users_lead_requests_path do |f| %>
      <%= t("lead_user.lead_requests.index.view.search.keyword_label") %><%= f.text_field :with_keyword %>
      <%= f.select :with_category, @categories, {:include_blank => true} %>
      <%= f.select :with_deal_value_from, User::DEAL_VALUE_RANGE, {:include_blank => true} %>
      <%= f.select :with_deal_value_to, User::DEAL_VALUE_RANGE, {:include_blank => true} %>
      <%= f.select :with_country, @countries, {:include_blank => true} %>
      <%= f.select :with_requested_by, @requestees, {:include_blank => true} %>
      <%= submit_tag t("lead_user.lead_requests.index.view.search.search_button") %>
  <% end %>

  <%= check_box_tag "mark_all", 1, false, :onclick => "mark_all_cbs_with_selector(this.checked,'input:checkbox')" %>
  <%= bulk_form do %>
      <%= lead_requests_listing @lead_requests, :show_checkboxes => true do |blocks| %>

          <% blocks.tools do |lead| %>
              <% if current_user %>
                  <% if current_user.has_role?(:lead_user) %>
                      <%= link_to t("lead_user.lead_requests.index.view.destroy_lead_request"), lead_users_lead_request_path(:id => lead.id), :method => :delete %>
                  <% end %>
              <% end %>

          <% end %>
      <% end %>
      <% if user_signed_in? && current_user.has_role?(:lead_user) %>
        <%= hidden_field_tag :route_to %>
        <%= button_to_function t("lead_user.lead_requests.index.view.button_bulk_destroy_lead_request"), "submitBulkForm('#{lead_users_bulk_lead_requests_path}#DELETE');" %>
      <% end %>
  <% end %>

</column-mc:>