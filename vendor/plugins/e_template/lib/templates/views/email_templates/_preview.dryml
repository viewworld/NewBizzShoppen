<div class="header">Email preview</div>
<div class="content">
  <div style="background: #fafafa">
    <ul class="info_list bordered">
      <li>
        <label style="width: 55px;">To: </label>
        <%= email_template.to %>
      </li>
      <li>
        <label style="width: 55px">From: </label>
        <%= email_template.from %>
      </li>
      <li>
        <label style="width: 55px">Subject: </label>
        <%= email_template.subject %>
      </li>
    </ul>
  </div>
  <%= email_template.render(options) %>
</div>